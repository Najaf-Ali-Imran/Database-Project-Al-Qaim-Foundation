<Page x:Class="AlQaim.LT_Requests"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:AlQaim"
      xmlns:converters="clr-namespace:AlQaim.Converters"
      xmlns:models="clr-namespace:AlQaim.Models"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d"
      d:DesignHeight="650" d:DesignWidth="900"
      Title="Submit Lab Request">

    <Page.Resources>
        <SolidColorBrush x:Key="PrimaryBackColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackColor" Color="#F4F7FE"/>
        <SolidColorBrush x:Key="PrimaryAccentColor" Color="#4361EE"/>
        <SolidColorBrush x:Key="SecondaryAccentColor" Color="#3A0CA3"/>
        <SolidColorBrush x:Key="TextColor" Color="#333333"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E1E5EB"/>
        <SolidColorBrush x:Key="LightGrayColor" Color="#F2F2F2"/>
        <SolidColorBrush x:Key="ApprovedColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="PendingColor" Color="#F39C12"/>
        <SolidColorBrush x:Key="RejectedColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="CancelledColor" Color="#6B7280"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3B82F6"/>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <converters:StatusToColorConverter x:Key="StatusToColorConverter"/>
        <converters:StatusToCancelVisibilityConverter x:Key="StatusToCancelVisibilityConverter"/>
        <converters:StringIsNullOrEmptyConverter x:Key="StringIsNullOrEmptyConverter"/>
        <converters:AlternatingRowBackgroundConverter x:Key="AlternatingRowBackgroundConverter"/>

        

     
        

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.6"/>
                    <Setter Property="Cursor" Value="Arrow"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                Padding="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button" BasedOn="{StaticResource IconButtonStyle}">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="6"/>
        </Style>

        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackColor}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SecondaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Focusable="false"
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsReadOnly" Value="True">
                    <Setter Property="Background" Value="{StaticResource LightGrayColor}"/>
                    <Setter Property="Foreground" Value="#888888"/>
                    <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DatePickerTextBoxStyle" TargetType="{x:Type DatePickerTextBox}">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{Binding RelativeSource={RelativeSource AncestorType=DatePicker}, Path=Foreground}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DatePickerTextBox}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <ScrollViewer x:Name="PART_ContentHost" Grid.Column="0"/>
                            <Button x:Name="PART_Button" Grid.Column="1" Foreground="{Binding RelativeSource={RelativeSource AncestorType=DatePicker}, Path=Foreground}" Focusable="False" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="Transparent" Padding="5">
                                            <iconPacks:PackIconMaterial Kind="Calendar" Width="16" Height="16" Foreground="{Binding RelativeSource={RelativeSource AncestorType=DatePicker}, Path=Foreground}" Opacity="0.7"/>
                                        </Border>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="{TemplateBinding Background}"
                                 BorderBrush="{TemplateBinding BorderBrush}"
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 CornerRadius="6">
                            <DatePickerTextBox x:Name="PART_TextBox"
                                                Style="{StaticResource DatePickerTextBoxStyle}"
                                                Padding="{TemplateBinding Padding}"
                                                VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>


        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                                <ToggleButton x:Name="ToggleButton"
                                      IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Padding="{TemplateBinding Padding}"
                                      Focusable="False"
                                      HorizontalContentAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter Grid.Column="0"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Margin="{TemplateBinding Padding}"/>
                                        <Path Grid.Column="1"
                                      Data="M0,0 L5,5 L10,0"
                                      Fill="{StaticResource TextColor}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,10,0"
                                      Stretch="Fill"
                                      Width="10"
                                      Height="5"/>
                                    </Grid>
                                </ToggleButton>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           PopupAnimation="Slide"
                           Placement="Bottom"
                           Focusable="False">
                                <Border BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                Background="{StaticResource PrimaryBackColor}"
                                CornerRadius="6"
                                Margin="0,5,0,0">
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="StatusPillStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>
        <Storyboard x:Key="FadeOutAnimation">
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" Duration="0:0:0.3"/>
        </Storyboard>

    </Page.Resources>

    <Grid Background="{StaticResource SecondaryBackColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="30,25,30,20">
            <TextBlock Text="Submit Lab Request" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
            <TextBlock Text="Create new requests and view your submission history." Margin="0,5,0,0" FontSize="14" Foreground="{StaticResource TextColor}" Opacity="0.7"/>

            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0"
                        Background="{StaticResource PrimaryBackColor}"
                        CornerRadius="6"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <iconPacks:PackIconMaterial Grid.Column="0"
                                                   Kind="Magnify"
                                                   Width="16" Height="16"
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Foreground="{StaticResource TextColor}"/>
                        <TextBox Grid.Column="1"
                                 x:Name="txtSearch"
                                 Style="{StaticResource TextBoxStyle}"
                                 BorderThickness="0"
                                 Margin="5,0,0,0"
                                 Padding="5,10"
                                 FontSize="14"
                                 Background="Transparent"
                                 TextChanged="TxtSearch_TextChanged"
                                 VerticalAlignment="Center"
                                 Foreground="{StaticResource TextColor}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Grid>
                                                    <TextBlock Text="Search your requests..."
                                                               Padding="0,0,0,0" Margin="5,0,0,0" VerticalAlignment="Center"
                                                               Foreground="Gray"
                                                               Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                 Focusable="False"
                                                                 Margin="{TemplateBinding Padding}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </Border>

                <Button Grid.Column="1"
                        x:Name="btnRefresh"
                        Style="{StaticResource IconButtonStyle}"
                        ToolTip="Refresh History"
                        Margin="10,0,0,0"
                        Click="BtnRefresh_Click">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="20" Height="20" Foreground="{StaticResource TextColor}"/>
                </Button>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock x:Name="TechnicianNameBlock" Text="John Doe"
                            VerticalAlignment="Center" Margin="0,0,10,0"
                            Foreground="{StaticResource TextColor}" FontSize="14"/>
                    <Ellipse Width="36" Height="36" Margin="0,0,5,0">
                        <Ellipse.Fill>
                            <ImageBrush ImageSource="doctor.png"/>
                        </Ellipse.Fill>
                    </Ellipse>
                </StackPanel>

            </Grid>
        </StackPanel>

        <Grid Grid.Row="1" Margin="30,0,30,30">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2.5*"/>
                <ColumnDefinition Width="3.5*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="{StaticResource PrimaryBackColor}"
                     CornerRadius="10" Padding="20" Margin="0,0,15,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="New Request" FontSize="18" FontWeight="Medium"
                                   Margin="0,0,0,20" Foreground="{StaticResource TextColor}"/>

                        <Label Content="Request Type" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="RequestTypeComboBox" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,15">
                            <ComboBoxItem Content="Test Re-Request"/>
                            <ComboBoxItem Content="Inventory Restock"/>
                            <ComboBoxItem Content="Equipment Maintenance"/>
                            <ComboBoxItem Content="Software Issue"/>
                            <ComboBoxItem Content="Other"/>
                        </ComboBox>

                        <Label Content="Urgency Level" Style="{StaticResource LabelStyle}"/>
                        <ComboBox x:Name="UrgencyLevelComboBox" Style="{StaticResource ComboBoxStyle}" Margin="0,0,0,15">
                            <ComboBoxItem Content="Low"/>
                            <ComboBoxItem Content="Medium" IsSelected="True"/>
                            <ComboBoxItem Content="High"/>
                            <ComboBoxItem Content="Critical"/>
                        </ComboBox>

                        <Label Content="Date" Style="{StaticResource LabelStyle}"/>
                        <DatePicker x:Name="RequestDatePicker" Style="{StaticResource DatePickerStyle}" Margin="0,0,0,15" />

                        <Label Content="Description" Style="{StaticResource LabelStyle}"/>
                        <TextBox x:Name="DescriptionTextBox" Style="{StaticResource TextBoxStyle}"
                                 Height="120" TextWrapping="Wrap"
                                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"
                                 Margin="0,0,0,15"/>

                        <Label Content="Attachment (Optional)" Style="{StaticResource LabelStyle}"/>
                        <Grid Margin="0,0,0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBox x:Name="AttachmentPathTextBox" Style="{StaticResource TextBoxStyle}" IsReadOnly="True" Margin="0,0,10,0"/>

                            <Button Grid.Column="1" Style="{StaticResource PrimaryButtonStyle}"
                                    Padding="10,8" Height="Auto" Background="Transparent"
                                    Foreground="{StaticResource PrimaryAccentColor}"
                                    BorderBrush="{StaticResource PrimaryAccentColor}" BorderThickness="1"
                                    Click="AttachFileButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <iconPacks:PackIconMaterial Kind="Paperclip" Width="14" Height="14" VerticalAlignment="Center"/>
                                    <TextBlock Text="Attach" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <Button x:Name="SubmitButton" Content="Submit Request"
                                Style="{StaticResource PrimaryButtonStyle}" Margin="0,10,0,0"
                                Click="SubmitButton_Click"/>

                        <TextBlock x:Name="ErrorMessageBlock" Foreground="{StaticResource ErrorColor}"
                                   TextWrapping="Wrap" Margin="0,10,0,0" Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Request History -->
            <Border Grid.Column="1" Background="{StaticResource PrimaryBackColor}"
                     CornerRadius="10" Padding="1" Margin="15,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- History Header -->
                    <TextBlock Grid.Row="0" Text="Your Request History" FontSize="18" FontWeight="Medium"
                                VerticalAlignment="Center" Foreground="{StaticResource TextColor}"
                                Margin="20,15,20,15"/>

                    <!-- DataGrid for History -->
                    <DataGrid Grid.Row="1" x:Name="RequestHistoryDataGrid"
                               Style="{StaticResource DataGridStyle}"
                               ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                               CellStyle="{StaticResource DataGridCellStyle}"
                               ItemsSource="{Binding RequestHistoryView}"
                               Margin="1" BorderThickness="0" Padding="10">

                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Request ID" Binding="{Binding RequestId}" Width="0.8*"/>
                            <DataGridTextColumn Header="Type" Binding="{Binding RequestType}" Width="1.2*"/>
                            <DataGridTextColumn Header="Date" Binding="{Binding SubmissionDate, StringFormat='{}{0:dd-MM-yyyy}'}" Width="1*"/>
                            <DataGridTemplateColumn Header="Status" Width="1*">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource StatusPillStyle}"
                                                 Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                                            <TextBlock Text="{Binding Status}" Foreground="White"
                                                        FontSize="12" FontWeight="Medium"
                                                        HorizontalAlignment="Center"/>
                                        </Border>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTemplateColumn Header="Actions" Width="Auto">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Button Style="{StaticResource ActionButtonStyle}"
                                                     Tag="{Binding RequestId}" Click="ViewDetailsButton_Click"
                                                     ToolTip="View Details">
                                                <iconPacks:PackIconMaterial Kind="Eye" Width="18" Height="18"
                                                                             Foreground="{StaticResource InfoColor}"/>
                                            </Button>
                                            <Button Style="{StaticResource ActionButtonStyle}"
                                                     Margin="5,0,0,0"
                                                     Tag="{Binding RequestId}" Click="CancelRequestButton_Click"
                                                     ToolTip="Cancel Request"
                                                     Visibility="{Binding Status, Converter={StaticResource StatusToCancelVisibilityConverter}}">
                                                <iconPacks:PackIconMaterial Kind="Close" Width="18" Height="18"
                                                                             Foreground="{StaticResource RejectedColor}"/>
                                            </Button>
                                        </StackPanel>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </Border>
        </Grid>

        <Border x:Name="modalOverlay"
                Grid.RowSpan="2"
                Background="#80000000"
                Visibility="Collapsed" Opacity="0">
            <Border Background="{StaticResource PrimaryBackColor}"
                    CornerRadius="10"
                    Width="500"
                    MaxHeight="650"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <StackPanel>
                            <TextBlock Text="Request Details" FontSize="20" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                            <Grid Margin="0,12,0,0">
                                <TextBlock x:Name="modalRequestId" Text="Request ID: #" FontSize="14" Foreground="{StaticResource TextColor}" Opacity="0.7"/>
                                <Border x:Name="modalStatusPill" Style="{StaticResource StatusPillStyle}" Background="{StaticResource PendingColor}" HorizontalAlignment="Right">
                                    <TextBlock x:Name="modalStatus" Text="Status" Foreground="White" FontSize="12" FontWeight="Medium"/>
                                </Border>
                            </Grid>
                        </StackPanel>
                        <Button x:Name="btnCloseModal" HorizontalAlignment="Right" VerticalAlignment="Top"
                                Style="{StaticResource IconButtonStyle}" Click="BtnCloseModal_Click">
                            <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="{StaticResource TextColor}"/>
                        </Button>
                    </Grid>

                    <!-- Details Fields -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Request Type" FontWeight="Medium" Foreground="{StaticResource TextColor}" Opacity="0.8"/>
                                    <TextBlock x:Name="txtRequestType" Text="Type" Foreground="{StaticResource TextColor}" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Submission Date" FontWeight="Medium" Foreground="{StaticResource TextColor}" Opacity="0.8"/>
                                    <TextBlock x:Name="txtSubmissionDate" Text="Date" Foreground="{StaticResource TextColor}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                    <TextBlock Text="Submitted By" FontWeight="Medium" Foreground="{StaticResource TextColor}" Opacity="0.8"/>
                                    <TextBlock x:Name="txtSubmittedBy" Text="Submitter" Foreground="{StaticResource TextColor}" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                    <TextBlock Text="Urgency" FontWeight="Medium" Foreground="{StaticResource TextColor}" Opacity="0.8"/>
                                    <TextBlock x:Name="txtUrgency" Text="Urgency" Foreground="{StaticResource TextColor}" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <StackPanel Margin="0,0,0,15">
                                <TextBlock Text="Description" FontWeight="Medium" Foreground="{StaticResource TextColor}" Opacity="0.8"/>
                                <TextBlock x:Name="txtDescription" Text="Description text." Foreground="{StaticResource TextColor}" TextWrapping="Wrap" Margin="0,5,0,0"/>
                            </StackPanel>

                            <!-- Attachment Info -->
                            <StackPanel Margin="0,0,0,15" x:Name="attachmentSection" Visibility="Collapsed">
                                <TextBlock Text="Attachment" FontWeight="Medium" Foreground="{StaticResource TextColor}" Opacity="0.8"/>
                                <TextBlock x:Name="txtAttachment" Text="filename.pdf" Foreground="{StaticResource InfoColor}" Margin="0,5,0,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Cursor" Value="Hand"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="TextDecorations" Value="Underline"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>

                            <StackPanel Margin="0,0,0,15" x:Name="adminNotesSection" Visibility="Collapsed">
                                <TextBlock Text="Admin Notes" FontWeight="Medium" Foreground="{StaticResource TextColor}" Opacity="0.8"/>
                                <TextBlock x:Name="txtAdminNotes" Text="Admin feedback." Foreground="{StaticResource TextColor}" Margin="0,5,0,0" TextWrapping="Wrap" FontStyle="Italic"/>
                            </StackPanel>

                        </StackPanel>
                    </ScrollViewer>

                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button x:Name="btnCloseViewModal" Style="{StaticResource PrimaryButtonStyle}" Click="BtnCloseModal_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14"/>
                                <TextBlock Text="Close" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Toast Notification -->
        <Border x:Name="toastNotification"
                Grid.Row="1" Grid.ColumnSpan="2" 
            Background="{StaticResource SuccessColor}"
                CornerRadius="8" Padding="15,12" Width="350"
                HorizontalAlignment="Right" VerticalAlignment="Bottom"
                Margin="0,0,30,30"
                Visibility="Collapsed" Opacity="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <iconPacks:PackIconMaterial Grid.Column="0" x:Name="toastIcon" Kind="CheckCircle" Width="20" Height="20" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" x:Name="toastMessage" Text="Operation successful!" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
                <Button Grid.Column="2" x:Name="btnCloseToast" Style="{StaticResource IconButtonStyle}" Background="Transparent" Width="24" Height="24" HorizontalAlignment="Right" Click="BtnCloseToast_Click">
                    <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="White"/>
                </Button>
            </Grid>
        </Border>
        <Border x:Name="confirmationOverlay"
Grid.RowSpan="2"   
    Background="#80000000"
Visibility="Collapsed"
HorizontalAlignment="Stretch"
VerticalAlignment="Stretch">
            <Border Background="{StaticResource PrimaryBackColor}"
    CornerRadius="10"
    Width="400"
    Padding="25"
    HorizontalAlignment="Center"
    VerticalAlignment="Center">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon -->
                    <iconPacks:PackIconMaterial Grid.Row="0"
                                Kind="AlertCircleOutline"
                                Width="50"
                                Height="50"
                                Foreground="#E74C3C"
                                HorizontalAlignment="Center"
                                Margin="0,0,0,15"/>

                    <!-- Confirmation Message -->
                    <TextBlock Grid.Row="1"
               x:Name="txtConfirmationMessage"
               Text="Are you sure you want to delete this user?"
               TextWrapping="Wrap"
               TextAlignment="Center"
               FontSize="16"
               Foreground="{StaticResource TextColor}"
               Margin="0,0,0,20"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Center">
                        <Button x:Name="btnCancelConfirmation"
                Style="{StaticResource PrimaryButtonStyle}"
                Background="Transparent"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                Padding="20,8"
                Click="BtnCancelConfirmation_Click">
                            <TextBlock Text="Cancel" Foreground="{StaticResource TextColor}"/>
                        </Button>
                        <Button x:Name="btnConfirmAction"
                Style="{StaticResource PrimaryButtonStyle}"
                Background="#E74C3C"
                Padding="20,8"
                Margin="10,0,0,0"
                Click="BtnConfirmAction_Click">
                            <TextBlock Text="Delete"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</Page>