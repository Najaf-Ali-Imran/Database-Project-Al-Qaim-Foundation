<Page x:Class="AlQaim.Admin_AppointmentManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:local="clr-namespace:AlQaim"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="AppointmentManagement">

    <Page.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBackColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackColor" Color="#F4F7FE"/>
        <SolidColorBrush x:Key="PrimaryAccentColor" Color="#4361EE"/>
        <SolidColorBrush x:Key="SecondaryAccentColor" Color="#3A0CA3"/>
        <SolidColorBrush x:Key="TextColor" Color="#333333"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E1E5EB"/>
        <SolidColorBrush x:Key="LightGrayColor" Color="#F2F2F2"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#2ECC71"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F39C12"/>
        <SolidColorBrush x:Key="DangerColor" Color="#E74C3C"/>

        <!-- Boolean to Visibility Converter -->
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

        <!-- Status Colors Converter -->
        <local:AppointmentStatusToColorConverter x:Key="StatusToColorConverter"/>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackColor}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SecondaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="false" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <!-- Wrap the ToggleButton in a Border to get rounded corners -->
                            <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                                <ToggleButton x:Name="ToggleButton"
                                      IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Padding="{TemplateBinding Padding}"
                                      Focusable="False"
                                      HorizontalContentAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter Grid.Column="0"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Margin="{TemplateBinding Padding}"/>
                                        <Path Grid.Column="1" 
                                      Data="M0,0 L5,5 L10,0" 
                                      Fill="{StaticResource TextColor}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,10,0"
                                      Stretch="Fill"
                                      Width="10"
                                      Height="5"/>
                                    </Grid>
                                </ToggleButton>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           PopupAnimation="Slide"
                           Placement="Bottom"
                           Focusable="False">
                                <Border BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                Background="{StaticResource PrimaryBackColor}"
                                CornerRadius="6"
                                Margin="0,5,0,0">
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePicker">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <DatePickerTextBox x:Name="PART_TextBox"
                                                 Grid.Column="0"
                                                 BorderThickness="0"
                                                 Background="Transparent"
                                                 Padding="{TemplateBinding Padding}"/>
                                <Button x:Name="PART_Button"
                                      Grid.Column="1"
                                      BorderThickness="0"
                                      Background="Transparent"
                                      Padding="8,0">
                                    <iconPacks:PackIconMaterial Kind="CalendarMonth"
                                                           Width="16"
                                                           Height="16"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"
                                                           Foreground="{StaticResource TextColor}"/>
                                </Button>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <!-- Status Chip Style -->
        <Style x:Key="StatusChipStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SecondaryBackColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="30,25,30,15">
            <TextBlock Text="Manage Appointments" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
        </StackPanel>

        <!-- Action Bar Section -->
        <Grid Grid.Row="1" Margin="30,0,30,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Search Bar -->
            <Border Grid.Column="0" 
                    Background="{StaticResource PrimaryBackColor}" 
                    CornerRadius="6" 
                    BorderBrush="{StaticResource BorderColor}" 
                    BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <iconPacks:PackIconMaterial Grid.Column="0" 
                                                Kind="Magnify" 
                                                Width="16" Height="16" 
                                                VerticalAlignment="Center"
                                                Margin="12,0,0,0"
                                                Foreground="{StaticResource TextColor}"/>
                    <TextBox Grid.Column="1" 
                                x:Name="txtSearch" 
                                Style="{StaticResource TextBoxStyle}" 
                                BorderThickness="0" 
                                Margin="5,0,0,0" 
                                Padding="5,10"
                                FontSize="14"
                                Background="Transparent"
                                TextChanged="TxtSearch_TextChanged"
                                VerticalAlignment="Center"
                                Foreground="{StaticResource TextColor}">
                        <TextBox.Resources>
                            <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type TextBox}">
                                            <Grid>
                                                <TextBlock Text="Search appointments..." 
                                                            Margin="{TemplateBinding Padding}"
                                                            Foreground="Gray"
                                                            Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                <ScrollViewer x:Name="PART_ContentHost" 
                                                                Focusable="False"
                                                                Margin="{TemplateBinding Padding}"/>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                </Grid>
            </Border>

            <!-- Status Filter -->
            <ComboBox Grid.Column="1" 
                      x:Name="cmbStatusFilter" 
                      Style="{StaticResource ComboBoxStyle}" 
                      Width="150"
                      Margin="10,0,0,0"
                      SelectionChanged="CmbStatusFilter_SelectionChanged">
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="Scheduled"/>
                <ComboBoxItem Content="Completed"/>
                <ComboBoxItem Content="Canceled"/>
                <ComboBoxItem Content="No Show"/>
            </ComboBox>

            <!-- Date Filter -->
            <DatePicker Grid.Column="2" 
                       x:Name="dpDateFilter" 
                       Style="{StaticResource DatePickerStyle}" 
                       Width="150"
                       Margin="10,0,0,0"
                       SelectedDateChanged="DpDateFilter_SelectedDateChanged"/>

            <!-- Refresh Button -->
            <Button Grid.Column="3" 
                    x:Name="btnRefresh" 
                    Style="{StaticResource IconButtonStyle}" 
                    ToolTip="Refresh" 
                    Margin="10,0,0,0"
                    Click="BtnRefresh_Click">
                <iconPacks:PackIconMaterial Kind="Refresh" Width="20" Height="20" Foreground="{StaticResource TextColor}"/>
            </Button>

            <!-- Add Appointment Button -->
            <Button Grid.Column="4" 
                    x:Name="btnAddAppointment" 
                    Style="{StaticResource PrimaryButtonStyle}" 
                    Margin="10,0,0,0"
                    Click="BtnAddAppointment_Click">
                <StackPanel Orientation="Horizontal">
                    <iconPacks:PackIconMaterial Kind="CalendarPlus" Width="16" Height="16"/>
                    <TextBlock Text="Add Appointment" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </Grid>

        <!-- DataGrid Section -->
        <Border Grid.Row="2" 
                Background="{StaticResource PrimaryBackColor}" 
                CornerRadius="10" 
                Margin="30,0,30,30">
            <Grid>
                <DataGrid x:Name="dgAppointments" 
                          Style="{StaticResource DataGridStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          Margin="1"
                          BorderThickness="0"
                          Padding="10"
                          SelectionChanged="DgAppointments_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding AppointmentId}" Width="70"/>
                        <DataGridTextColumn Header="Code" Binding="{Binding Code}" Width="100"/>
                        <DataGridTextColumn Header="Patient" Binding="{Binding PatientName}" Width="*"/>
                        <DataGridTextColumn Header="Assigned Doctor" Binding="{Binding DoctorName}" Width="*"/>
                        <DataGridTextColumn Header="Date" Binding="{Binding AppointmentDate, StringFormat='{}{0:MMM dd, yyyy}'}" Width="*"/>
                        <DataGridTextColumn Header="Time" Binding="{Binding AppointmentDate, StringFormat='{}{0:hh:mm tt}'}" Width="*"/>
                        <DataGridTemplateColumn Header="Status" Width="*">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource StatusChipStyle}"
                                           Background="{Binding Status, Converter={StaticResource StatusToColorConverter}}">
                                        <TextBlock Text="{Binding Status}" 
                                                   Foreground="White" 
                                                   FontSize="12" 
                                                   FontWeight="SemiBold"
                                                   HorizontalAlignment="Center" />
                                    </Border>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="btnEdit" 
                                                Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Edit Appointment"
                                                Click="BtnEdit_Click">
                                            <iconPacks:PackIconMaterial Kind="Pencil" Width="18" Height="18" Foreground="{StaticResource PrimaryAccentColor}"/>
                                        </Button>
                                        <Button x:Name="btnCancel" 
                                                Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Cancel Appointment"
                                                Margin="5,0,0,0"
                                                Click="BtnCancelAppointment_Click"
                                                Visibility="{Binding CanBeCanceled, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <iconPacks:PackIconMaterial Kind="CalendarRemove" Width="18" Height="18" Foreground="#E74C3C"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Appointment Details Modal Popup -->
        <Border x:Name="modalOverlay" 
                Grid.RowSpan="3" 
                Background="#80000000" 
                Visibility="Collapsed">
            <Border Background="{StaticResource PrimaryBackColor}" 
                    CornerRadius="10" 
                    Width="550" 
                    MaxHeight="680"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock x:Name="modalTitle" 
                                   Text="Add New Appointment" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextColor}"/>
                        <Button x:Name="btnCloseModal" 
                                HorizontalAlignment="Right" 
                                Style="{StaticResource IconButtonStyle}"
                                Click="BtnCloseModal_Click">
                            <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="{StaticResource TextColor}"/>
                        </Button>
                    </Grid>

                    <!-- Form Fields -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,0,5,0">
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Patient Selection -->
                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <Label Content="Patient" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="cmbPatient" 
                                              Style="{StaticResource ComboBoxStyle}"
                                              DisplayMemberPath="FullName"
                                              SelectedValuePath="PatientId"/>
                                </StackPanel>

                                <!-- Code (Optional) -->
                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <Label Content="Code (Optional)" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtCode" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>
                            </Grid>

                            <!-- Date and Time -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <Label Content="Date" Style="{StaticResource LabelStyle}"/>
                                    <DatePicker x:Name="dpAppointmentDate" 
                                                Style="{StaticResource DatePickerStyle}"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <Label Content="Time" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="cmbAppointmentTime" 
                                              Style="{StaticResource ComboBoxStyle}">
                                        <ComboBoxItem Content="08:00 AM"/>
                                        <ComboBoxItem Content="08:30 AM"/>
                                        <ComboBoxItem Content="09:00 AM"/>
                                        <ComboBoxItem Content="09:30 AM"/>
                                        <ComboBoxItem Content="10:00 AM"/>
                                        <ComboBoxItem Content="10:30 AM"/>
                                        <ComboBoxItem Content="11:00 AM"/>
                                        <ComboBoxItem Content="11:30 AM"/>
                                        <ComboBoxItem Content="12:00 PM"/>
                                        <ComboBoxItem Content="12:30 PM"/>
                                        <ComboBoxItem Content="01:00 PM"/>
                                        <ComboBoxItem Content="01:30 PM"/>
                                        <ComboBoxItem Content="02:00 PM"/>
                                        <ComboBoxItem Content="02:30 PM"/>
                                        <ComboBoxItem Content="03:00 PM"/>
                                        <ComboBoxItem Content="03:30 PM"/>
                                        <ComboBoxItem Content="04:00 PM"/>
                                        <ComboBoxItem Content="04:30 PM"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Doctor and Status -->
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                    <Label Content="Assigned Doctor" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="cmbDoctor" 
                                              Style="{StaticResource ComboBoxStyle}"
                                              DisplayMemberPath="FullName" 
                                              SelectedValuePath="UserId"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                    <Label Content="Status" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="cmbStatus" 
                                              Style="{StaticResource ComboBoxStyle}">
                                        <ComboBoxItem Content="Scheduled" IsSelected="True"/>
                                        <ComboBoxItem Content="Completed"/>
                                        <ComboBoxItem Content="Canceled"/>
                                        <ComboBoxItem Content="No Show"/>
                                    </ComboBox>
                                </StackPanel>
                            </Grid>

                            <!-- Notes -->
                            <StackPanel Margin="0,0,0,15">
                                <Label Content="Notes (Optional)" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtNotes" 
                                         Style="{StaticResource TextBoxStyle}" 
                                         Height="100" 
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        <Button x:Name="btnCancel" 
        Style="{StaticResource PrimaryButtonStyle}" 
        Background="Transparent"
        BorderBrush="{StaticResource BorderColor}"
        Foreground="{StaticResource TextColor}"
        Content="Cancel"
        Click="BtnCancel_Click"/>
                        <Button x:Name="btnSaveAppointment" 
        Style="{StaticResource PrimaryButtonStyle}" 
        Content="Save Appointment"
        Margin="10,0,0,0"
        Click="BtnSaveAppointment_Click"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Confirmation Dialog -->
        <Border x:Name="confirmationDialog" 
        Grid.RowSpan="3" 
        Background="#80000000" 
        Visibility="Collapsed">
            <Border Background="{StaticResource PrimaryBackColor}" 
            CornerRadius="10" 
            Width="400" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon -->
                    <iconPacks:PackIconMaterial Grid.Row="0" 
                                        Kind="AlertCircleOutline" 
                                        Width="50" 
                                        Height="50" 
                                        Foreground="#E74C3C"
                                        HorizontalAlignment="Center"
                                        Margin="0,0,0,15"/>

                    <!-- Message -->
                    <TextBlock Grid.Row="1" 
                       x:Name="txtConfirmationMessage" 
                       Text="Are you sure you want to cancel this appointment?" 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"
                       FontSize="16"
                       Foreground="{StaticResource TextColor}"
                       Margin="0,0,0,20"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                        <Button x:Name="btnCancelConfirmation" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Background="Transparent"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        Padding="20,8"
                        Click="BtnCancelConfirmation_Click">
                            <TextBlock Text="Cancel" Foreground="{StaticResource TextColor}"/>
                        </Button>
                        <Button x:Name="btnConfirmAction" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Background="#E74C3C"
                        Padding="20,8"
                        Margin="10,0,0,0"
                        Click="BtnConfirmAction_Click">
                            <TextBlock Text="Delete"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>


        <!-- Loading Overlay -->
        <Border x:Name="loadingOverlay" 
        Grid.RowSpan="3" 
        Background="#80000000" 
        Visibility="Collapsed">
            <Border Background="{StaticResource PrimaryBackColor}" 
            CornerRadius="10" 
            Width="200" 
            Height="120"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center">
                <StackPanel VerticalAlignment="Center" 
                    HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" 
                         Width="50" 
                         Height="50"
                         Style="{DynamicResource MaterialDesignCircularProgressBar}"/>
                    <TextBlock Text="Loading..." 
                       Margin="0,15,0,0" 
                       FontSize="14"
                       Foreground="{StaticResource TextColor}"
                       HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Border>
        <Border x:Name="toastNotification" 
Grid.Row="1" 
Background="{StaticResource PrimaryAccentColor}" 
CornerRadius="8" 
Padding="15,12" 
Width="300"
HorizontalAlignment="Center"
VerticalAlignment="Top"
Margin="0,20,0,0"
Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Grid.Column="0" 
                           x:Name="toastIcon" 
                           Kind="CheckCircle" 
                           Width="20" 
                           Height="20" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
           x:Name="toastMessage" 
           Text="Operation completed successfully!" 
           Foreground="White"
           VerticalAlignment="Center"
           Margin="10,0,0,0"/>

                <Button Grid.Column="2" 
        x:Name="btnCloseToast" 
        Style="{StaticResource IconButtonStyle}"
        Background="Transparent"
        HorizontalAlignment="Right"
        Click="BtnCloseToast_Click">
                    <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="White"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>