<Page x:Class="AlQaim.Admin_InventoryUsage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="InventoryUsage">

    <Page.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBackColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackColor" Color="#F4F7FE"/>
        <SolidColorBrush x:Key="PrimaryAccentColor" Color="#4361EE"/>
        <SolidColorBrush x:Key="SecondaryAccentColor" Color="#3A0CA3"/>
        <SolidColorBrush x:Key="TextColor" Color="#333333"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E1E5EB"/>
        <SolidColorBrush x:Key="LightGrayColor" Color="#F2F2F2"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#10B981"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F59E0B"/>
        <SolidColorBrush x:Key="DangerColor" Color="#EF4444"/>
        <SolidColorBrush x:Key="InfoColor" Color="#3B82F6"/>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackColor}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SecondaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="false" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="IsTodayHighlighted" Value="True"/>
            <Setter Property="SelectedDateFormat" Value="Short"/>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                                <ToggleButton x:Name="ToggleButton"
                                      IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Padding="{TemplateBinding Padding}"
                                      Focusable="False"
                                      HorizontalContentAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter Grid.Column="0"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Margin="{TemplateBinding Padding}"/>
                                        <Path Grid.Column="1" 
                                      Data="M0,0 L5,5 L10,0" 
                                      Fill="{StaticResource TextColor}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,10,0"
                                      Stretch="Fill"
                                      Width="10"
                                      Height="5"/>
                                    </Grid>
                                </ToggleButton>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           PopupAnimation="Slide"
                           Placement="Bottom"
                           Focusable="False">
                                <Border BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                Background="{StaticResource PrimaryBackColor}"
                                CornerRadius="6"
                                Margin="0,5,0,0">
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Metric Card Style -->
        <Style x:Key="MetricCardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,15,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.1" Color="#000000"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SecondaryBackColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="30,25,30,20">
            <TextBlock Text="Inventory Usage" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>

            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Bar -->
                <Border Grid.Column="0" 
                        Background="{StaticResource PrimaryBackColor}" 
                        CornerRadius="6" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <iconPacks:PackIconMaterial Grid.Column="0" 
                                                   Kind="Magnify" 
                                                   Width="16" Height="16" 
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Foreground="{StaticResource TextColor}"/>
                        <TextBox Grid.Column="1" 
                                 x:Name="txtSearch" 
                                 Style="{StaticResource TextBoxStyle}" 
                                 BorderThickness="0" 
                                 Margin="5,0,0,0" 
                                 Padding="5,10"
                                 FontSize="14"
                                 Background="Transparent"
                                 TextChanged="TxtSearch_TextChanged"
                                 VerticalAlignment="Center"
                                 Foreground="{StaticResource TextColor}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Grid>
                                                    <TextBlock Text="Search usage logs..." 
                                                               Margin="{TemplateBinding Padding}"
                                                               Foreground="Gray"
                                                               Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                 Focusable="False"
                                                                 Margin="{TemplateBinding Padding}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Date Range Pickers -->
                <DatePicker Grid.Column="1" 
                            x:Name="dpStartDate" 
                            Style="{StaticResource DatePickerStyle}" 
                            Margin="10,0,0,0" 
                            Width="130"
                            SelectedDateChanged="DatePicker_SelectedDateChanged"/>

                <DatePicker Grid.Column="2" 
                            x:Name="dpEndDate" 
                            Style="{StaticResource DatePickerStyle}" 
                            Margin="10,0,0,0" 
                            Width="130"
                            SelectedDateChanged="DatePicker_SelectedDateChanged"/>

                <!-- Refresh Button -->
                <Button Grid.Column="3" 
                        x:Name="btnRefresh" 
                        Style="{StaticResource IconButtonStyle}" 
                        ToolTip="Refresh" 
                        Margin="10,0,0,0"
                        Click="BtnRefresh_Click">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="20" Height="20" Foreground="{StaticResource TextColor}"/>
                </Button>

                <!-- Export Button -->
                <Button Grid.Column="4" 
                        x:Name="btnExport" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Margin="10,0,0,0"
                        Click="BtnExport_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FileExport" Width="16" Height="16"/>
                        <TextBlock Text="Export" Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>

        <!-- Metrics Section -->
        <Grid Grid.Row="1" Margin="30,0,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Metrics Cards -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- First Row of Metrics -->
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Total Usage This Month -->
                    <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Total Usage This Month" FontSize="14" Foreground="#666666"/>
                                <TextBlock x:Name="txtTotalUsage" Text="2,457" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                                <TextBlock x:Name="txtUsageChange" Text="+12% from last month" FontSize="12" Foreground="{StaticResource SuccessColor}" Margin="0,5,0,0"/>
                            </StackPanel>

                            <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource InfoColor}" Width="42" Height="42" CornerRadius="8" VerticalAlignment="Top">
                                <iconPacks:PackIconMaterial Kind="PackageVariantRemove" Width="20" Height="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Low Stock Items -->
                    <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Low Stock Items" FontSize="14" Foreground="#666666"/>
                                <TextBlock x:Name="txtLowStock" Text="12" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                                <TextBlock x:Name="txtLowStockChange" Text="+3 from last week" FontSize="12" Foreground="{StaticResource DangerColor}" Margin="0,5,0,0"/>
                            </StackPanel>

                            <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource WarningColor}" Width="42" Height="42" CornerRadius="8" VerticalAlignment="Top">
                                <iconPacks:PackIconMaterial Kind="AlertCircle" Width="20" Height="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <!-- Second Row of Metrics -->
                <Grid Grid.Row="1" Margin="0,15,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Items Expiring Soon -->
                    <Border Grid.Column="0" Style="{StaticResource MetricCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Items Expiring Soon" FontSize="14" Foreground="#666666"/>
                                <TextBlock x:Name="txtExpiringItems" Text="7" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                                <TextBlock x:Name="txtExpiringChange" Text="-2 from last week" FontSize="12" Foreground="{StaticResource SuccessColor}" Margin="0,5,0,0"/>
                            </StackPanel>

                            <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource DangerColor}" Width="42" Height="42" CornerRadius="8" VerticalAlignment="Top">
                                <iconPacks:PackIconMaterial Kind="CalendarClock" Width="20" Height="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Most Used Category -->
                    <Border Grid.Column="1" Style="{StaticResource MetricCardStyle}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <TextBlock Text="Most Used Category" FontSize="14" Foreground="#666666"/>
                                <TextBlock x:Name="txtMostUsedCategory" Text="Reagents" FontSize="28" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>
                                <TextBlock x:Name="txtCategoryUsage" Text="43% of total usage" FontSize="12" Foreground="{StaticResource TextColor}" Margin="0,5,0,0"/>
                            </StackPanel>

                            <Border Grid.Row="0" Grid.Column="1" Background="{StaticResource SuccessColor}" Width="42" Height="42" CornerRadius="8" VerticalAlignment="Top">
                                <iconPacks:PackIconMaterial Kind="ChartPie" Width="20" Height="20" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>

            <!-- Usage Distribution Chart -->
            <Border Grid.Column="1" Background="{StaticResource PrimaryBackColor}" CornerRadius="10" Padding="20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Usage Distribution by Item Type" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <lvc:PieChart Grid.Row="1" x:Name="usageDistributionChart" Series="{Binding PieChartData}" LegendLocation="Bottom" InnerRadius="40" Hoverable="True" DataTooltip="{Binding}">
                        <lvc:PieChart.ChartLegend>
                            <lvc:DefaultLegend BulletSize="10"/>
                        </lvc:PieChart.ChartLegend>
                    </lvc:PieChart>
                </Grid>
            </Border>
        </Grid>

        <!-- DataGrid Section -->
        <Border Grid.Row="2" 
                Background="{StaticResource PrimaryBackColor}" 
                CornerRadius="10" 
                Margin="30,0,30,30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Detailed Usage Logs" FontSize="16" FontWeight="SemiBold" Margin="20,15,0,15"/>

                <DataGrid Grid.Row="1" 
                          x:Name="dgUsageLogs" 
                          Style="{StaticResource DataGridStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          Margin="1"
                          BorderThickness="0"
                          Padding="10"
                          SelectionChanged="DgUsageLogs_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Usage ID" Binding="{Binding UsageID}" Width="0.7*"/>
                        <DataGridTextColumn Header="Item Name" Binding="{Binding ItemName}" Width="*"/>
                        <DataGridTextColumn Header="Used Quantity" Binding="{Binding UsedQuantity}" Width="0.7*"/>
                        <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="0.6*"/>
                        <DataGridTextColumn Header="Usage Date" Binding="{Binding UsageDate, StringFormat=d}" Width="*"/>
                        <DataGridTextColumn Header="Used By" Binding="{Binding UsedBy}" Width="*"/>
                        <DataGridTextColumn Header="Test/Sample" Binding="{Binding TestName}" Width="*"/>
                        <DataGridTemplateColumn Header="Actions" Width="100">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="btnView" 
                                                Style="{StaticResource IconButtonStyle}"
                                                ToolTip="View Details"
                                                Click="BtnView_Click">
                                            <iconPacks:PackIconMaterial Kind="Eye" Width="18" Height="18" Foreground="{StaticResource PrimaryAccentColor}"/>
                                        </Button>
                                        <Button x:Name="btnDelete" 
                                                Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Delete Record"
                                                Margin="5,0,0,0"
                                                Click="BtnDelete_Click">
                                            <iconPacks:PackIconMaterial Kind="Delete" Width="18" Height="18" Foreground="#E74C3C"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Usage Details Modal Popup -->
        <Border x:Name="modalOverlay" 
                Grid.RowSpan="3" 
                Background="#80000000" 
                Visibility="Collapsed">
            <Border Background="{StaticResource PrimaryBackColor}" 
                    CornerRadius="10" 
                    Width="480" 
                    MaxHeight="600"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock x:Name="modalTitle" 
                                   Text="Usage Details" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextColor}"/>
                        <Button x:Name="btnCloseModal" 
                                HorizontalAlignment="Right" 
                                Style="{StaticResource IconButtonStyle}"
                                Click="BtnCloseModal_Click">
                            <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="{StaticResource TextColor}"/>
                        </Button>
                    </Grid>

                    <!-- Usage Details Content -->
                    <!-- Usage Details Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Item Details -->
                            <TextBlock Text="Item Information" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,10"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,10">
                                    <TextBlock Text="Item Name" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtItemName" Text="Sodium Chloride" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock Text="Item Code" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtItemCode" Text="CHM-001" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,10">
                                    <TextBlock Text="Used Quantity" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtQuantity" Text="25 grams" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,0,0,10">
                                    <TextBlock Text="Current Stock" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtCurrentStock" Text="460 grams" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,10,0">
                                    <TextBlock Text="Category" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtCategory" Text="Reagents" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="2" Margin="0,0,0,0">
                                    <TextBlock Text="Storage Location" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtLocation" Text="Cabinet B-12" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>
                            </Grid>

                            <!-- Usage Details -->
                            <TextBlock Text="Usage Information" FontWeight="SemiBold" FontSize="16" Margin="0,10,0,10"/>
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,10">
                                    <TextBlock Text="Usage ID" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtUsageId" Text="USG-1024" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="0,0,0,10">
                                    <TextBlock Text="Usage Date" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtUsageDate" Text="25 Feb 2025" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,10">
                                    <TextBlock Text="Used By" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtUsedBy" Text="John Smith" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="0,0,0,10">
                                    <TextBlock Text="Department" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtDepartment" Text="Chemistry" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,10,0" Grid.ColumnSpan="2">
                                    <TextBlock Text="Test/Sample" FontSize="12" Foreground="#666666"/>
                                    <TextBlock x:Name="txtTestSample" Text="Soil Analysis - Sample #SA-2025-0342" FontSize="14" FontWeight="Medium" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Grid>

                            <!-- Notes Section -->
                            <TextBlock Text="Notes" FontWeight="SemiBold" FontSize="16" Margin="0,10,0,10"/>
                            <Border Background="{StaticResource LightGrayColor}" CornerRadius="6" Padding="15" MinHeight="80">
                                <TextBlock x:Name="txtNotes" Text="Used for standard soil pH testing procedure. Calibration performed before usage." 
                                           FontSize="14" TextWrapping="Wrap"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer with Actions -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                        <Button x:Name="btnPrint" 
                                Style="{StaticResource IconButtonStyle}" 
                                ToolTip="Print Details"
                                Margin="0,0,10,0"
                                Click="BtnPrint_Click">
                            <iconPacks:PackIconMaterial Kind="Printer" Width="18" Height="18" Foreground="{StaticResource TextColor}"/>
                        </Button>

                        <Button x:Name="btnEdit" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Background="{StaticResource InfoColor}"
                                Margin="0,0,10,0"
                                Click="BtnEdit_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Pencil" Width="16" Height="16"/>
                                <TextBlock Text="Edit" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btnDeleteConfirm" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Background="{StaticResource DangerColor}"
                                Click="BtnDeleteConfirm_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Delete" Width="16" Height="16"/>
                                <TextBlock Text="Delete" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
        <Border x:Name="toastNotification"
                Grid.Row="2"
            Background="{StaticResource PrimaryAccentColor}"
                CornerRadius="8"
                Padding="15,12"
                Width="350"

            HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,20,0,0"
                Visibility="Collapsed"
                Panel.ZIndex="999">
            <!-- Ensure it appears above other content if needed -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Grid.Column="0"
                                            x:Name="toastIcon"
                                            Kind="CheckCircle"
                                            Width="20"
                                            Height="20"
                                            Foreground="White"
                                            VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           x:Name="toastMessage"
                           Text="Operation completed successfully!"
                           Foreground="White"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap" 
                           Margin="10,0,10,0"/> <!-- Add margin on right too -->

                <Button Grid.Column="2"
                        x:Name="btnCloseToast"
                        Style="{StaticResource IconButtonStyle}"
                        Background="Transparent"
                        HorizontalAlignment="Right"
                        Click="BtnCloseToast_Click"> <!-- Ensure this Click handler exists in C# -->
                    <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="White"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>