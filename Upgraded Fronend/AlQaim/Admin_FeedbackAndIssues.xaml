<Page x:Class="AlQaim.Admin_FeedbackAndIssues"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="FeedbackAndIssues">

    <Page.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBackColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackColor" Color="#F4F7FE"/>
        <SolidColorBrush x:Key="PrimaryAccentColor" Color="#4361EE"/>
        <SolidColorBrush x:Key="SecondaryAccentColor" Color="#3A0CA3"/>
        <SolidColorBrush x:Key="TextColor" Color="#333333"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E1E5EB"/>
        <SolidColorBrush x:Key="LightGrayColor" Color="#F2F2F2"/>
        <SolidColorBrush x:Key="ApprovedColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="PendingColor" Color="#F39C12"/>
        <SolidColorBrush x:Key="RejectedColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="SuccessColor" Color="Green"/>
        <SolidColorBrush x:Key="ErrorColor" Color="Red"/>
        <SolidColorBrush x:Key="NewStatusColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="InProgressColor" Color="#9B59B6"/>
        <SolidColorBrush x:Key="ResolvedColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="ReviewedColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="ActionTakenColor" Color="#8E44AD"/>

        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackColor}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SecondaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="false" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                           
                            <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                                <ToggleButton x:Name="ToggleButton"
                                      IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Padding="{TemplateBinding Padding}"
                                      Focusable="False"
                                      HorizontalContentAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter Grid.Column="0"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Margin="{TemplateBinding Padding}"/>
                                        <Path Grid.Column="1" 
                                      Data="M0,0 L5,5 L10,0" 
                                      Fill="{StaticResource TextColor}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,10,0"
                                      Stretch="Fill"
                                      Width="10"
                                      Height="5"/>
                                    </Grid>
                                </ToggleButton>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           PopupAnimation="Slide"
                           Placement="Bottom"
                           Focusable="False">
                                <Border BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                Background="{StaticResource PrimaryBackColor}"
                                CornerRadius="6"
                                Margin="0,5,0,0">
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TabControl Style -->
        <Style x:Key="CustomTabControlStyle" TargetType="TabControl">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="CustomTabItemStyle" TargetType="TabItem">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Border" 
                                Background="Transparent"
                                BorderThickness="0,0,0,2"
                                BorderBrush="Transparent"
                                Margin="0,0,20,0"
                                Padding="10,15">
                            <ContentPresenter x:Name="ContentSite"
                                    VerticalAlignment="Center"
                                    HorizontalAlignment="Center"
                                    ContentSource="Header"
                                    Margin="0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Border" Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryAccentColor}"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="False">
                                <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Border" Property="Background" Value="#F8F9FA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Status Template -->
        <DataTemplate x:Key="StatusTemplate">
            <Border x:Name="StatusBorder" 
                    CornerRadius="4" 
                    Padding="8,4" 
                    HorizontalAlignment="Center">
                <TextBlock Text="{Binding}" 
                           FontSize="12" 
                           FontWeight="Medium" 
                           HorizontalAlignment="Center"/>
            </Border>
            <DataTemplate.Triggers>
                <!-- Feedback Status Colors -->
                <DataTrigger Binding="{Binding}" Value="Pending">
                    <Setter TargetName="StatusBorder" Property="Background" Value="#FFF7DC"/>
                    <Setter TargetName="StatusBorder" Property="BorderBrush" Value="#F1C40F"/>
                    <Setter TargetName="StatusBorder" Property="BorderThickness" Value="1"/>
                    <Setter TargetName="StatusBorder" Property="TextBlock.Foreground" Value="#B7950B"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="Reviewed">
                    <Setter TargetName="StatusBorder" Property="Background" Value="#E8F5E9"/>
                    <Setter TargetName="StatusBorder" Property="BorderBrush" Value="#27AE60"/>
                    <Setter TargetName="StatusBorder" Property="BorderThickness" Value="1"/>
                    <Setter TargetName="StatusBorder" Property="TextBlock.Foreground" Value="#27AE60"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="Action Taken">
                    <Setter TargetName="StatusBorder" Property="Background" Value="#EDE7F6"/>
                    <Setter TargetName="StatusBorder" Property="BorderBrush" Value="#9575CD"/>
                    <Setter TargetName="StatusBorder" Property="BorderThickness" Value="1"/>
                    <Setter TargetName="StatusBorder" Property="TextBlock.Foreground" Value="#7E57C2"/>
                </DataTrigger>
                <!-- Issue Status Colors -->
                <DataTrigger Binding="{Binding}" Value="New">
                    <Setter TargetName="StatusBorder" Property="Background" Value="#E3F2FD"/>
                    <Setter TargetName="StatusBorder" Property="BorderBrush" Value="#2196F3"/>
                    <Setter TargetName="StatusBorder" Property="BorderThickness" Value="1"/>
                    <Setter TargetName="StatusBorder" Property="TextBlock.Foreground" Value="#1976D2"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="In Progress">
                    <Setter TargetName="StatusBorder" Property="Background" Value="#E8EAF6"/>
                    <Setter TargetName="StatusBorder" Property="BorderBrush" Value="#3F51B5"/>
                    <Setter TargetName="StatusBorder" Property="BorderThickness" Value="1"/>
                    <Setter TargetName="StatusBorder" Property="TextBlock.Foreground" Value="#3949AB"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding}" Value="Resolved">
                    <Setter TargetName="StatusBorder" Property="Background" Value="#E8F5E9"/>
                    <Setter TargetName="StatusBorder" Property="BorderBrush" Value="#4CAF50"/>
                    <Setter TargetName="StatusBorder" Property="BorderThickness" Value="1"/>
                    <Setter TargetName="StatusBorder" Property="TextBlock.Foreground" Value="#388E3C"/>
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SecondaryBackColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="30,25,30,20">
            <TextBlock Text="Feedback and Issues" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>

            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Bar -->
                <Border Grid.Column="0" 
                        Background="{StaticResource PrimaryBackColor}" 
                        CornerRadius="6" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <iconPacks:PackIconMaterial Grid.Column="0" 
                                                   Kind="Magnify" 
                                                   Width="16" Height="16" 
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Foreground="{StaticResource TextColor}"/>
                        <TextBox Grid.Column="1" 
                                 x:Name="txtSearch" 
                                 Style="{StaticResource TextBoxStyle}" 
                                 BorderThickness="0" 
                                 Margin="5,0,0,0" 
                                 Padding="5,10"
                                 FontSize="14"
                                 Background="Transparent"
                                 TextChanged="TxtSearch_TextChanged"
                                 VerticalAlignment="Center"
                                 Foreground="{StaticResource TextColor}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Grid>
                                                    <TextBlock Text="Search..." 
                                                               Margin="{TemplateBinding Padding}"
                                                               Foreground="Gray"
                                                               Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                 Focusable="False"
                                                                 Margin="{TemplateBinding Padding}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Filter Dropdown -->
                <ComboBox Grid.Column="1" 
                          x:Name="cmbFilter" 
                          Style="{StaticResource ComboBoxStyle}" 
                          Width="150"
                          Margin="10,0,0,0"
                          SelectionChanged="CmbFilter_SelectionChanged">
                    <ComboBoxItem Content="All Items" IsSelected="True"/>
                    <ComboBoxItem Content="Feedback Only"/>
                    <ComboBoxItem Content="Issues Only"/>
                    <ComboBoxItem Content="Pending Status"/>
                    <ComboBoxItem Content="Resolved/Reviewed"/>
                </ComboBox>

                <!-- Refresh Button -->
                <Button Grid.Column="2" 
                        x:Name="btnRefresh" 
                        Style="{StaticResource IconButtonStyle}" 
                        ToolTip="Refresh" 
                        Margin="10,0,0,0"
                        Click="BtnRefresh_Click">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="20" Height="20" Foreground="{StaticResource TextColor}"/>
                </Button>

                <!-- Export Button -->
                <Button Grid.Column="3" 
                        x:Name="btnExport" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Margin="10,0,0,0"
                        Click="BtnExport_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="FileExport" Width="16" Height="16"/>
                        <TextBlock Text="Export" Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>

        <!-- Main Content Area -->
        <Border Grid.Row="1" 
                Background="{StaticResource PrimaryBackColor}" 
                CornerRadius="10" 
                Margin="30,0,30,30">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Tab Control for Feedback and Issues -->
                <TabControl Grid.Row="0" 
                            Grid.RowSpan="2"
                            x:Name="tabFeedbackIssues" 
                            Style="{StaticResource CustomTabControlStyle}"
                            SelectionChanged="TabFeedbackIssues_SelectionChanged">
                    <TabItem Header="Feedback" Style="{StaticResource CustomTabItemStyle}">
                        <Grid>
                            <!-- Feedback DataGrid -->
                            <DataGrid x:Name="dgFeedback" 
                                      Style="{StaticResource DataGridStyle}"
                                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}"
                                      BorderThickness="0"
                                      Padding="10"
                                      Margin="1"
                                      SelectionChanged="DgFeedback_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding SubmissionId}" Width="80"/>
                                    <DataGridTextColumn Header="Submitted By" Binding="{Binding SubmittedBy}" Width="*"/>
                                    <DataGridTextColumn Header="Submission Date" Binding="{Binding SubmissionDate, StringFormat=\{0:MM/dd/yyyy\}}" Width="*"/>
                                    <DataGridTextColumn Header="Source" Binding="{Binding FeedbackSource}" Width="*"/>
                                    <DataGridTemplateColumn Header="Status" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ContentControl ContentTemplate="{StaticResource StatusTemplate}" 
                                                                Content="{Binding Status}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Actions" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button x:Name="btnViewFeedback" 
                                                            Style="{StaticResource IconButtonStyle}"
                                                            ToolTip="View Details"
                                                            Click="BtnViewFeedback_Click">
                                                        <iconPacks:PackIconMaterial Kind="Eye" Width="18" Height="18" Foreground="{StaticResource PrimaryAccentColor}"/>
                                                    </Button>
                                                    <Button x:Name="btnReplyFeedback" 
                                                            Style="{StaticResource IconButtonStyle}"
                                                            ToolTip="Reply"
                                                            Margin="5,0,0,0"
                                                            Click="BtnReplyFeedback_Click">
                                                        <iconPacks:PackIconMaterial Kind="Reply" Width="18" Height="18" Foreground="{StaticResource PrimaryAccentColor}"/>
                                                    </Button>
                                                    <Button x:Name="btnDeleteFeedback" 
                                                            Style="{StaticResource IconButtonStyle}"
                                                            ToolTip="Delete"
                                                            Margin="5,0,0,0"
                                                            Click="BtnDeleteFeedback_Click">
                                                        <iconPacks:PackIconMaterial Kind="Delete" Width="18" Height="18" Foreground="#E74C3C"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                    <TabItem Header="Issues" Style="{StaticResource CustomTabItemStyle}">
                        <Grid>
                            <!-- Issues DataGrid -->
                            <DataGrid x:Name="dgIssues" 
                                      Style="{StaticResource DataGridStyle}"
                                      ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                                      CellStyle="{StaticResource DataGridCellStyle}"
                                      BorderThickness="0"
                                      Padding="10"
                                      Margin="1"
                                      SelectionChanged="DgIssues_SelectionChanged">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding IssueId}" Width="80"/>
                                    <DataGridTextColumn Header="Reported By" Binding="{Binding ReportedBy}" Width="*"/>
                                    <DataGridTextColumn Header="Type" Binding="{Binding IssueType}" Width="*"/>
                                    <DataGridTextColumn Header="Submission Date" Binding="{Binding SubmissionDate, StringFormat=\{0:MM/dd/yyyy\}}" Width="*"/>
                                    <DataGridTemplateColumn Header="Status" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <ContentControl ContentTemplate="{StaticResource StatusTemplate}" 
                                                                Content="{Binding Status}"/>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTemplateColumn Header="Actions" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <Button x:Name="btnViewIssue" 
                                                            Style="{StaticResource IconButtonStyle}"
                                                            ToolTip="View Details"
                                                            Click="BtnViewIssue_Click">
                                                        <iconPacks:PackIconMaterial Kind="Eye" Width="18" Height="18" Foreground="{StaticResource PrimaryAccentColor}"/>
                                                    </Button>
                                                    <Button x:Name="btnAssignIssue" 
                                                            Style="{StaticResource IconButtonStyle}"
                                                            ToolTip="Assign"
                                                            Margin="5,0,0,0"
                                                            Click="BtnAssignIssue_Click">
                                                        <iconPacks:PackIconMaterial Kind="AccountPlus" Width="18" Height="18" Foreground="{StaticResource PrimaryAccentColor}"/>
                                                    </Button>
                                                    <Button x:Name="btnDeleteIssue" 
                                                            Style="{StaticResource IconButtonStyle}"
                                                            ToolTip="Delete"
                                                            Margin="5,0,0,0"
                                                            Click="BtnDeleteIssue_Click">
                                                        <iconPacks:PackIconMaterial Kind="Delete" Width="18" Height="18" Foreground="#E74C3C"/>
                                                    </Button>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Grid>
                    </TabItem>
                </TabControl>
            </Grid>
        </Border>

        <!-- Feedback Details Modal -->
        <Border x:Name="feedbackDetailsOverlay" 
        Grid.RowSpan="2" 
        Background="#80000000" 
        Visibility="Collapsed">
            <Border MaxWidth="700" 
            MaxHeight="600" 
            Background="{StaticResource PrimaryBackColor}" 
            CornerRadius="10" 
            Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="txtFeedbackDetailsTitle" 
                           Text="Feedback Details" 
                           FontSize="20" 
                           FontWeight="SemiBold"/>
                        <Button Grid.Column="1" 
                        x:Name="btnCloseFeedbackDetails" 
                        Style="{StaticResource IconButtonStyle}" 
                        Click="BtnCloseFeedbackDetails_Click">
                            <iconPacks:PackIconMaterial Kind="Close" Width="18" Height="18"/>
                        </Button>
                    </Grid>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" Margin="0,20,0,0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Feedback Metadata -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- First Column -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,15">
                                    <TextBlock Text="Submission ID" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="txtFeedbackId" Text="FBK-1001" FontSize="15" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,15">
                                    <TextBlock Text="Submitted By" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="txtFeedbackSubmittedBy" Text="John Doe" FontSize="15" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,10,0">
                                    <TextBlock Text="Feedback Source" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="txtFeedbackSource" Text="Email" FontSize="15" Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Second Column -->
                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,15">
                                    <TextBlock Text="Submission Date" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="txtFeedbackDate" Text="01/15/2024" FontSize="15" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,15">
                                    <TextBlock Text="Status" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <ContentControl x:Name="ctrlFeedbackStatus" ContentTemplate="{StaticResource StatusTemplate}" Content="Pending" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Grid.Row="2" Margin="10,0,0,0">
                                    <TextBlock Text="Contact Email" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="txtFeedbackEmail" Text="john.doe@example.com" FontSize="15" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Feedback Content -->
                            <TextBlock Text="Feedback Message" FontWeight="Medium" FontSize="13" Foreground="#666" Margin="0,0,0,5"/>
                            <Border Background="{StaticResource SecondaryBackColor}" CornerRadius="6" Padding="15" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                <TextBlock x:Name="txtFeedbackMessage" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua..." TextWrapping="Wrap" Margin="0,0,0,0"/>
                            </Border>

                            <!-- Admin Notes Section -->
                            <TextBlock Text="Admin Notes" FontWeight="Medium" FontSize="13" Foreground="#666" Margin="0,20,0,5"/>
                            <TextBox x:Name="txtFeedbackAdminNotes" 
                             Style="{StaticResource TextBoxStyle}" 
                             Height="100" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"/>

                            <!-- Status Update Section -->
                            <Grid Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Update Status" FontWeight="Medium" FontSize="13" Foreground="#666" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="cmbUpdateFeedbackStatus" 
                                      Style="{StaticResource ComboBoxStyle}">
                                        <ComboBoxItem Content="Pending"/>
                                        <ComboBoxItem Content="Reviewed"/>
                                        <ComboBoxItem Content="Action Taken"/>
                                    </ComboBox>
                                </StackPanel>
                                <Button Grid.Column="1" 
                                x:Name="btnUpdateFeedbackStatus" 
                                Content="Update Status" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="10,22,0,0"
                                Click="BtnUpdateFeedbackStatus_Click"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" 
                        x:Name="btnReplyFeedbackModal" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Margin="0,0,10,0"
                        Click="BtnReplyFeedbackModal_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Reply" Width="16" Height="16"/>
                                <TextBlock Text="Reply" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                        <Button Grid.Column="2" 
                        x:Name="btnCloseFeedbackModal" 
                        Content="Close" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Background="#E0E0E0"
                        Foreground="{StaticResource TextColor}"
                        Click="BtnCloseFeedbackModal_Click"/>
                    </Grid>
                </Grid>
            </Border>
        </Border>

        <!-- Issue Details Modal -->
        <Border x:Name="issueDetailsOverlay" 
        Grid.RowSpan="2" 
        Background="#80000000" 
        Visibility="Collapsed">
            <Border MaxWidth="700" 
            MaxHeight="600" 
            Background="{StaticResource PrimaryBackColor}" 
            CornerRadius="10" 
            Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="txtIssueDetailsTitle" 
                           Text="Issue Details" 
                           FontSize="20" 
                           FontWeight="SemiBold"/>
                        <Button Grid.Column="1" 
                        x:Name="btnCloseIssueDetails" 
                        Style="{StaticResource IconButtonStyle}" 
                        Click="BtnCloseIssueDetails_Click">
                            <iconPacks:PackIconMaterial Kind="Close" Width="18" Height="18"/>
                        </Button>
                    </Grid>

                    <!-- Modal Content -->
                    <ScrollViewer Grid.Row="1" Margin="0,20,0,0" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Issue Metadata -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- First Column -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,15">
                                    <TextBlock Text="Issue ID" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="txtIssueId" Text="ISS-1001" FontSize="15" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,15">
                                    <TextBlock Text="Reported By" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="txtIssueReportedBy" Text="Jane Smith (Lab Technician)" FontSize="15" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,10,0">
                                    <TextBlock Text="Issue Type" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="txtIssueType" Text="Equipment" FontSize="15" Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Second Column -->
                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,15">
                                    <TextBlock Text="Submission Date" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="txtIssueDate" Text="01/15/2024" FontSize="15" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,15">
                                    <TextBlock Text="Status" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <ContentControl x:Name="ctrlIssueStatus" ContentTemplate="{StaticResource StatusTemplate}" Content="New" Margin="0,5,0,0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Grid.Row="2" Margin="10,0,0,0">
                                    <TextBlock Text="Assigned To" FontWeight="Medium" FontSize="13" Foreground="#666"/>
                                    <TextBlock x:Name="txtIssueAssignedTo" Text="Not Assigned" FontSize="15" Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Issue Description -->
                            <TextBlock Text="Issue Description" FontWeight="Medium" FontSize="13" Foreground="#666" Margin="0,0,0,5"/>
                            <Border Background="{StaticResource SecondaryBackColor}" CornerRadius="6" Padding="15" BorderBrush="{StaticResource BorderColor}" BorderThickness="1">
                                <TextBlock x:Name="txtIssueDescription" Text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua..." TextWrapping="Wrap" Margin="0,0,0,0"/>
                            </Border>

                            <!-- Admin Notes Section -->
                            <TextBlock Text="Resolution Notes" FontWeight="Medium" FontSize="13" Foreground="#666" Margin="0,20,0,5"/>
                            <TextBox x:Name="txtIssueResolutionNotes" 
                             Style="{StaticResource TextBoxStyle}" 
                             Height="100" 
                             TextWrapping="Wrap" 
                             AcceptsReturn="True"/>

                            <!-- Status Update Section -->
                            <Grid Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Update Status" FontWeight="Medium" FontSize="13" Foreground="#666" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="cmbUpdateIssueStatus" 
                                      Style="{StaticResource ComboBoxStyle}">
                                        <ComboBoxItem Content="New"/>
                                        <ComboBoxItem Content="In Progress"/>
                                        <ComboBoxItem Content="Resolved"/>
                                    </ComboBox>
                                </StackPanel>
                                <Button Grid.Column="1" 
                                x:Name="btnUpdateIssueStatus" 
                                Content="Update Status" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="10,22,0,0"
                                Click="BtnUpdateIssueStatus_Click"/>
                            </Grid>

                            <!-- Assign Issue Section -->
                            <Grid Margin="0,20,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="Assign To" FontWeight="Medium" FontSize="13" Foreground="#666" Margin="0,0,0,5"/>
                                    <ComboBox x:Name="cmbAssignIssue" 
                                      Style="{StaticResource ComboBoxStyle}">
                                        <ComboBoxItem Content="Not Assigned"/>
                                        <ComboBoxItem Content="John Smith (Maintenance)"/>
                                        <ComboBoxItem Content="Jessica Brown (Lab Manager)"/>
                                        <ComboBoxItem Content="Robert Jones (IT Support)"/>
                                    </ComboBox>
                                </StackPanel>
                                <Button Grid.Column="1" 
                                x:Name="btnAssignIssueModal" 
                                Content="Assign" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="10,22,0,0"
                                Click="BtnAssignIssueModal_Click"/>
                            </Grid>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Modal Footer -->
                    <Grid Grid.Row="2" Margin="0,20,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="1" 
                        x:Name="btnCloseIssueModal" 
                        Content="Close" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Background="#E0E0E0"
                        Foreground="{StaticResource TextColor}"
                        Click="BtnCloseIssueModal_Click"/>
                    </Grid>
                </Grid>
            </Border>
        </Border>

        <!-- No Data Display -->
        <Grid x:Name="noDataPanel" 
      Grid.Row="1" 
      Visibility="Collapsed"
      Margin="30,0,30,30">
            <Border Background="{StaticResource PrimaryBackColor}" 
            CornerRadius="10" 
            Padding="20">
                <StackPanel HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="FileDocumentOutline" 
                                       Width="60" Height="60" 
                                       Foreground="#CCCCCC"
                                       HorizontalAlignment="Center"/>
                    <TextBlock Text="No feedback or issues found" 
                       FontSize="18" 
                       FontWeight="Medium" 
                       Foreground="#666666"
                       HorizontalAlignment="Center"
                       Margin="0,15,0,5"/>
                    <TextBlock Text="Try adjusting your search criteria or check back later" 
                       FontSize="14" 
                       Foreground="#888888"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"
                       Margin="0,0,0,20"/>
                    <Button Content="Refresh Data" 
                    Style="{StaticResource PrimaryButtonStyle}"
                    Click="BtnRefresh_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Processing Overlay -->
        <Grid x:Name="processingOverlay" 
      Grid.RowSpan="2" 
      Background="#80000000" 
      Visibility="Collapsed">
            <Border Background="{StaticResource PrimaryBackColor}" 
            CornerRadius="10" 
            Padding="30,20"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            MaxWidth="300">
                <StackPanel Orientation="Horizontal" 
                    HorizontalAlignment="Center">
                    <iconPacks:PackIconMaterial Kind="Loading" 
                                       Width="24" Height="24" 
                                       Foreground="{StaticResource PrimaryAccentColor}"
                                       Spin="True"/>
                    <TextBlock Text="Processing..." 
                       FontSize="16" 
                       FontWeight="Medium" 
                       Foreground="{StaticResource TextColor}"
                       VerticalAlignment="Center"
                       Margin="15,0,0,0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Success Message -->
        <Border x:Name="successMessage" 
        Grid.Row="1" 
        Background="{StaticResource SuccessColor}" 
        CornerRadius="6" 
        Padding="15,10"
        Visibility="Collapsed"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="CheckCircle" 
                                   Width="20" Height="20" 
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                <TextBlock x:Name="txtSuccessMessage" 
                   Text="Operation completed successfully!" 
                   Foreground="White"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>
            </StackPanel>
        </Border>

        <!-- Error Message -->
        <Border x:Name="errorMessage" 
        Grid.Row="1" 
        Background="{StaticResource ErrorColor}" 
        CornerRadius="6" 
        Padding="15,10"
        Visibility="Collapsed"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal">
                <iconPacks:PackIconMaterial Kind="AlertCircle" 
                                   Width="20" Height="20" 
                                   Foreground="White"
                                   VerticalAlignment="Center"/>
                <TextBlock x:Name="txtErrorMessage" 
                   Text="An error occurred. Please try again." 
                   Foreground="White"
                   FontWeight="SemiBold"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        <Border x:Name="confirmationOverlay"
                Grid.RowSpan="2"
                Background="#80000000"
                Visibility="Collapsed"
                Panel.ZIndex="1000">
      
            <Border Background="{StaticResource PrimaryBackColor}"
                    CornerRadius="10"
                    Width="400"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon -->
                    <iconPacks:PackIconMaterial Grid.Row="0"
                                                Kind="AlertCircleOutline"
                                                Width="50"
                                                Height="50"
                                                Foreground="{StaticResource RejectedColor}"
                        HorizontalAlignment="Center"
                                                Margin="0,0,0,15"/>

                        <!-- Confirmation Message -->
                        <TextBlock Grid.Row="1"
                               x:Name="txtConfirmationMessage"
                               Text="Are you sure you want to perform this action?" 
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               FontSize="16"
                               Foreground="{StaticResource TextColor}"
                               Margin="0,0,0,20"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2"
                                Orientation="Horizontal"
                                HorizontalAlignment="Center">
                        <Button x:Name="btnCancelConfirmation"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Background="Transparent"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                Padding="20,8"
                                Click="BtnCancelConfirmation_Click">
                            <TextBlock Text="Cancel" Foreground="{StaticResource TextColor}"/>
                        </Button>
                        <Button x:Name="btnConfirmAction"
                                Style="{StaticResource PrimaryButtonStyle}"
                                Background="{StaticResource RejectedColor}" 
                                Padding="20,8"
                                Margin="10,0,0,0"
                                Click="BtnConfirmAction_Click">
            
                            <TextBlock x:Name="txtConfirmActionText" Text="Delete"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
        <Border x:Name="toastNotification"
                Grid.Row="1" 
            Background="{StaticResource PrimaryAccentColor}"
                CornerRadius="8"
                Padding="15,12"
                Width="350"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="0,20,0,0"
                Visibility="Collapsed"
                Panel.ZIndex="999">
        
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Grid.Column="0"
                                            x:Name="toastIcon"
                                            Kind="CheckCircle"
                                            Width="20"
                                            Height="20"
                                            Foreground="White"
                                            VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1"
                           x:Name="toastMessage"
                           Text="Operation completed successfully!"
                           Foreground="White"
                           VerticalAlignment="Center"
                           TextWrapping="Wrap"
                           Margin="10,0,10,0"/>

                <Button Grid.Column="2"
                        x:Name="btnCloseToast"
                        Style="{StaticResource IconButtonStyle}"
                        Background="Transparent"
                        HorizontalAlignment="Right"
                        >
                    <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="White"/>
                </Button>
            </Grid>
        </Border>
   

    </Grid>
</Page>