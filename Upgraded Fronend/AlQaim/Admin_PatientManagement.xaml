<Page x:Class="AlQaim.Admin_PatientManagement"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="900"
      Title="PatientManagement">

    <Page.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="PrimaryBackColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SecondaryBackColor" Color="#F4F7FE"/>
        <SolidColorBrush x:Key="PrimaryAccentColor" Color="#4361EE"/>
        <SolidColorBrush x:Key="SecondaryAccentColor" Color="#3A0CA3"/>
        <SolidColorBrush x:Key="TextColor" Color="#333333"/>
        <SolidColorBrush x:Key="BorderColor" Color="#E1E5EB"/>
        <SolidColorBrush x:Key="LightGrayColor" Color="#F2F2F2"/>

        <!-- Button Styles -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryAccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="{TemplateBinding Padding}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource SecondaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6" 
                                Padding="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DataGrid Styles -->
        <Style x:Key="DataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RowBackground" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="AlternatingRowBackground" Value="{StaticResource SecondaryBackColor}"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="RowHeight" Value="45"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="CanUserReorderColumns" Value="False"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource SecondaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DataGridCell">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="6">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                          Focusable="false" 
                                          Margin="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- DatePicker Style -->
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="{StaticResource PrimaryAccentColor}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ComboBox Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource PrimaryBackColor}"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="6">
                                <ToggleButton x:Name="ToggleButton"
                                      IsChecked="{Binding Path=IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}"
                                      Background="Transparent"
                                      BorderThickness="0"
                                      Padding="{TemplateBinding Padding}"
                                      Focusable="False"
                                      HorizontalContentAlignment="Stretch">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <ContentPresenter Grid.Column="0"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Left"
                                                  Margin="{TemplateBinding Padding}"/>
                                        <Path Grid.Column="1" 
                                      Data="M0,0 L5,5 L10,0" 
                                      Fill="{StaticResource TextColor}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Right"
                                      Margin="0,0,10,0"
                                      Stretch="Fill"
                                      Width="10"
                                      Height="5"/>
                                    </Grid>
                                </ToggleButton>
                            </Border>
                            <Popup IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           PopupAnimation="Slide"
                           Placement="Bottom"
                           Focusable="False">
                                <Border BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                Background="{StaticResource PrimaryBackColor}"
                                CornerRadius="6"
                                Margin="0,5,0,0">
                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Label Style -->
        <Style x:Key="LabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource SecondaryBackColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <StackPanel Grid.Row="0" Margin="30,25,30,20">
            <TextBlock Text="Manage Patient Records" FontSize="24" FontWeight="Bold" Foreground="{StaticResource TextColor}"/>

            <Grid Margin="0,15,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Search Bar -->
                <Border Grid.Column="0" 
                        Background="{StaticResource PrimaryBackColor}" 
                        CornerRadius="6" 
                        BorderBrush="{StaticResource BorderColor}" 
                        BorderThickness="1">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <iconPacks:PackIconMaterial Grid.Column="0" 
                                                   Kind="Magnify" 
                                                   Width="16" Height="16" 
                                                   VerticalAlignment="Center"
                                                   Margin="12,0,0,0"
                                                   Foreground="{StaticResource TextColor}"/>
                        <TextBox Grid.Column="1" 
                                 x:Name="txtSearch" 
                                 Style="{StaticResource TextBoxStyle}" 
                                 BorderThickness="0" 
                                 Margin="5,0,0,0" 
                                 Padding="5,10"
                                 FontSize="14"
                                 Background="Transparent"
                                 TextChanged="TxtSearch_TextChanged"
                                 VerticalAlignment="Center"
                                 Foreground="{StaticResource TextColor}">
                            <TextBox.Resources>
                                <Style TargetType="{x:Type TextBox}" BasedOn="{StaticResource TextBoxStyle}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type TextBox}">
                                                <Grid>
                                                    <TextBlock Text="Search by name, CNIC, or phone..." 
                                                               Margin="{TemplateBinding Padding}"
                                                               Foreground="Gray"
                                                               Visibility="{Binding Text.IsEmpty, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                    <ScrollViewer x:Name="PART_ContentHost" 
                                                                 Focusable="False"
                                                                 Margin="{TemplateBinding Padding}"/>
                                                </Grid>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </TextBox.Resources>
                        </TextBox>
                    </Grid>
                </Border>

                <!-- Filter Button -->
                <Button Grid.Column="1" 
                        x:Name="btnFilter" 
                        Style="{StaticResource IconButtonStyle}" 
                        ToolTip="Filter" 
                        Margin="10,0,0,0"
                        Click="BtnFilter_Click">
                    <iconPacks:PackIconMaterial Kind="Filter" Width="20" Height="20" Foreground="{StaticResource TextColor}"/>
                </Button>

                <!-- Refresh Button -->
                <Button Grid.Column="2" 
                        x:Name="btnRefresh" 
                        Style="{StaticResource IconButtonStyle}" 
                        ToolTip="Refresh" 
                        Margin="10,0,0,0"
                        Click="BtnRefresh_Click">
                    <iconPacks:PackIconMaterial Kind="Refresh" Width="20" Height="20" Foreground="{StaticResource TextColor}"/>
                </Button>

                <!-- Add Patient Button -->
                <Button Grid.Column="3" 
                        x:Name="btnAddPatient" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Margin="10,0,0,0"
                        Click="BtnAddPatient_Click">
                    <StackPanel Orientation="Horizontal">
                        <iconPacks:PackIconMaterial Kind="AccountPlus" Width="16" Height="16"/>
                        <TextBlock Text="Add Patient" Margin="8,0,0,0"/>
                    </StackPanel>
                </Button>
            </Grid>
        </StackPanel>

        <!-- DataGrid Section -->
        <Border Grid.Row="1" 
                Background="{StaticResource PrimaryBackColor}" 
                CornerRadius="10" 
                Margin="30,0,30,30">
            <Grid>
                <DataGrid x:Name="dgPatients" 
                          Style="{StaticResource DataGridStyle}"
                          ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                          CellStyle="{StaticResource DataGridCellStyle}"
                          Margin="1"
                          BorderThickness="0"
                          Padding="10"
                          SelectionChanged="DgPatients_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding PatientId}" Width="70" />
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*"/>
                        <DataGridTextColumn Header="Father's Name" Binding="{Binding FatherName}" Width="*"/>
                        <DataGridTextColumn Header="Age" Binding="{Binding Age}" Width="60"/>
                        <DataGridTextColumn Header="Blood Group" Binding="{Binding BloodGroup}" Width="100"/>
                        <DataGridTextColumn Header="CNIC" Binding="{Binding CNIC}" Width="130"/>
                        <DataGridTextColumn Header="Phone" Binding="{Binding Phone}" Width="120"/>
                        <DataGridTextColumn Header="Reg. Date" Binding="{Binding RegistrationDate, StringFormat={}{0:dd-MM-yyyy}}" Width="100"/>
                        <DataGridTemplateColumn Header="Actions" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button x:Name="btnView" 
                                                Style="{StaticResource IconButtonStyle}"
                                                ToolTip="View Details"
                                                Click="BtnView_Click">
                                            <iconPacks:PackIconMaterial Kind="FileDocumentOutline" Width="18" Height="18" Foreground="{StaticResource TextColor}"/>
                                        </Button>
                                        <Button x:Name="btnEdit" 
                                                Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Edit Patient"
                                                Click="BtnEdit_Click">
                                            <iconPacks:PackIconMaterial Kind="Pencil" Width="18" Height="18" Foreground="{StaticResource PrimaryAccentColor}"/>
                                        </Button>
                                        <Button x:Name="btnDelete" 
                                                Style="{StaticResource IconButtonStyle}"
                                                ToolTip="Delete Patient"
                                                Click="BtnDelete_Click">
                                            <iconPacks:PackIconMaterial Kind="Delete" Width="18" Height="18" Foreground="#E74C3C"/>
                                        </Button>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <!-- Filter Panel -->
        <Border x:Name="filterPanel" 
                Grid.Row="1" 
                Background="{StaticResource PrimaryBackColor}" 
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1" 
                CornerRadius="10" 
                Width="300"
                HorizontalAlignment="Right"
                Margin="0,10,30,0"
                Padding="20"
                VerticalAlignment="Top"
                Visibility="Collapsed">
            <StackPanel>
                <TextBlock Text="Filter Patients" 
                           FontSize="18" 
                           FontWeight="SemiBold" 
                           Margin="0,0,0,15"/>

                <StackPanel Margin="0,0,0,15">
                    <Label Content="Blood Group" Style="{StaticResource LabelStyle}"/>
                    <ComboBox x:Name="cmbFilterBloodGroup" Style="{StaticResource ComboBoxStyle}">
                        <ComboBoxItem Content="All"/>
                        <ComboBoxItem Content="A+"/>
                        <ComboBoxItem Content="A-"/>
                        <ComboBoxItem Content="B+"/>
                        <ComboBoxItem Content="B-"/>
                        <ComboBoxItem Content="AB+"/>
                        <ComboBoxItem Content="AB-"/>
                        <ComboBoxItem Content="O+"/>
                        <ComboBoxItem Content="O-"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="0,0,0,15">
                    <Label Content="Registration Date Range" Style="{StaticResource LabelStyle}"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <DatePicker Grid.Column="0" x:Name="dpFilterFrom" Style="{StaticResource DatePickerStyle}"/>
                        <TextBlock Grid.Column="1" Text="to" VerticalAlignment="Center" Margin="10,0"/>
                        <DatePicker Grid.Column="2" x:Name="dpFilterTo" Style="{StaticResource DatePickerStyle}"/>
                    </Grid>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="btnClearFilter" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Background="Transparent"
                            BorderBrush="{StaticResource BorderColor}"
                            BorderThickness="1"
                            Click="BtnClearFilter_Click">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="FilterRemove" Width="14" Height="14" Foreground="{StaticResource TextColor}"/>
                            <TextBlock Text="Clear" Margin="8,0,0,0" Foreground="{StaticResource TextColor}"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btnApplyFilter" 
                            Style="{StaticResource PrimaryButtonStyle}" 
                            Margin="10,0,0,0"
                            Click="BtnApplyFilter_Click">
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:PackIconMaterial Kind="Check" Width="14" Height="14"/>
                            <TextBlock Text="Apply" Margin="8,0,0,0"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Patient Details Modal Popup -->
        <Border x:Name="modalOverlay" 
                Grid.RowSpan="2" 
                Background="#80000000" 
                Visibility="Collapsed">
            <Border Background="{StaticResource PrimaryBackColor}" 
                    CornerRadius="10" 
                    Width="550" 
                    MaxHeight="650"
                    VerticalAlignment="Center" 
                    HorizontalAlignment="Center"
                    Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock x:Name="modalTitle" 
                                   Text="Add New Patient" 
                                   FontSize="20" 
                                   FontWeight="Bold" 
                                   Foreground="{StaticResource TextColor}"/>
                        <Button x:Name="btnCloseModal" 
                                HorizontalAlignment="Right" 
                                Style="{StaticResource IconButtonStyle}"
                                Click="BtnCloseModal_Click">
                            <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="{StaticResource TextColor}"/>
                        </Button>
                    </Grid>

                    <!-- Form Fields -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Column -->
                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="Full Name" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtName" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="Father's Name" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtFatherName" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="Age" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtAge" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="Blood Group" Style="{StaticResource LabelStyle}"/>
                                    <ComboBox x:Name="cmbBloodGroup" Style="{StaticResource ComboBoxStyle}">
                                        <ComboBoxItem Content="A+"/>
                                        <ComboBoxItem Content="A-"/>
                                        <ComboBoxItem Content="B+"/>
                                        <ComboBoxItem Content="B-"/>
                                        <ComboBoxItem Content="AB+"/>
                                        <ComboBoxItem Content="AB-"/>
                                        <ComboBoxItem Content="O+"/>
                                        <ComboBoxItem Content="O-"/>
                                    </ComboBox>
                                </StackPanel>
                            </StackPanel>

                            <!-- Right Column -->
                            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="CNIC" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtCNIC" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="Phone" Style="{StaticResource LabelStyle}"/>
                                    <TextBox x:Name="txtPhone" Style="{StaticResource TextBoxStyle}"/>
                                </StackPanel>

                                <StackPanel Margin="0,0,0,15">
                                    <Label Content="Registration Date" Style="{StaticResource LabelStyle}"/>
                                    <DatePicker x:Name="dpRegistrationDate" Style="{StaticResource DatePickerStyle}"/>
                                </StackPanel>
                            </StackPanel>

                            <!-- Full Width Elements -->
                            <StackPanel Grid.ColumnSpan="2" Grid.Column="0" Margin="0,400,0,0">
                                <Label Content="Medical Notes / Diagnosis" Style="{StaticResource LabelStyle}"/>
                                <TextBox x:Name="txtMedicalNotes" 
                                         Style="{StaticResource TextBoxStyle}" 
                                         TextWrapping="Wrap" 
                                         AcceptsReturn="True"
                                         VerticalScrollBarVisibility="Auto"
                                         Height="100"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right" 
                                Margin="0,20,0,0">
                        <Button x:Name="btnCancel" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Background="Transparent"
                                BorderBrush="{StaticResource BorderColor}"
                                BorderThickness="1"
                                Click="BtnCancel_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="Cancel" Margin="8,0,0,0" Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnSave" 
                                Style="{StaticResource PrimaryButtonStyle}" 
                                Margin="10,0,0,0"
                                Click="BtnSave_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="ContentSave" Width="14" Height="14"/>
                                <TextBlock Text="Save" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Patient Details View Modal -->
        <Border x:Name="detailsModalOverlay" 
        Grid.RowSpan="2" 
        Background="#80000000" 
        Visibility="Collapsed">
            <Border Background="{StaticResource PrimaryBackColor}" 
            CornerRadius="10" 
            Width="550" 
            MaxHeight="650"
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Modal Header -->
                    <Grid Grid.Row="0" Margin="0,0,0,20">
                        <TextBlock Text="Patient Details" 
                           FontSize="20" 
                           FontWeight="Bold" 
                           Foreground="{StaticResource TextColor}"/>
                        <Button x:Name="btnCloseDetailsModal" 
                        HorizontalAlignment="Right" 
                        Style="{StaticResource IconButtonStyle}"
                        Click="BtnCloseDetailsModal_Click">
                            <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="{StaticResource TextColor}"/>
                        </Button>
                    </Grid>

                    <!-- Patient Details Content -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Patient Info Header -->
                            <Border Background="{StaticResource SecondaryBackColor}" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,0,0,20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Patient Icon -->
                                    <Border Grid.Column="0" 
                                    Background="{StaticResource PrimaryAccentColor}" 
                                    Width="50" 
                                    Height="50" 
                                    CornerRadius="25">
                                        <iconPacks:PackIconMaterial Kind="Account" 
                                                          Width="30" 
                                                          Height="30" 
                                                          Foreground="White" 
                                                          HorizontalAlignment="Center" 
                                                          VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- Patient Basic Info -->
                                    <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                        <TextBlock x:Name="txtDetailsName" 
                                           Text="Patient Name" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="{StaticResource TextColor}"/>
                                        <TextBlock x:Name="txtDetailsId" 
                                           Text="ID: 12345" 
                                           FontSize="14" 
                                           Foreground="{StaticResource TextColor}" 
                                           Opacity="0.7" 
                                           Margin="0,5,0,0"/>
                                    </StackPanel>
                                </Grid>
                            </Border>

                            <!-- Patient Details Grid -->
                            <Grid Margin="0,0,0,20">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Left Column -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Margin="0,0,10,15">
                                    <TextBlock Text="Father's Name" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7"/>
                                    <TextBlock x:Name="txtDetailsFatherName" 
                                       Text="Father Name" 
                                       FontSize="15" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource TextColor}" 
                                       Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1" Margin="0,0,10,15">
                                    <TextBlock Text="Age" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7"/>
                                    <TextBlock x:Name="txtDetailsAge" 
                                       Text="35" 
                                       FontSize="15" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource TextColor}" 
                                       Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="2" Margin="0,0,10,15">
                                    <TextBlock Text="Blood Group" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7"/>
                                    <TextBlock x:Name="txtDetailsBloodGroup" 
                                       Text="O+" 
                                       FontSize="15" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource TextColor}" 
                                       Margin="0,5,0,0"/>
                                </StackPanel>

                                <!-- Right Column -->
                                <StackPanel Grid.Column="1" Grid.Row="0" Margin="10,0,0,15">
                                    <TextBlock Text="CNIC" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7"/>
                                    <TextBlock x:Name="txtDetailsCNIC" 
                                       Text="12345-1234567-1" 
                                       FontSize="15" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource TextColor}" 
                                       Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,0,0,15">
                                    <TextBlock Text="Phone" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7"/>
                                    <TextBlock x:Name="txtDetailsPhone" 
                                       Text="+92-300-1234567" 
                                       FontSize="15" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource TextColor}" 
                                       Margin="0,5,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="2" Margin="10,0,0,15">
                                    <TextBlock Text="Registration Date" 
                                       FontSize="12" 
                                       Foreground="{StaticResource TextColor}" 
                                       Opacity="0.7"/>
                                    <TextBlock x:Name="txtDetailsRegistrationDate" 
                                       Text="24-02-2023" 
                                       FontSize="15" 
                                       FontWeight="Medium" 
                                       Foreground="{StaticResource TextColor}" 
                                       Margin="0,5,0,0"/>
                                </StackPanel>
                            </Grid>

                            <!-- Medical Notes Section -->
                            <Border Background="{StaticResource SecondaryBackColor}" 
                            CornerRadius="8" 
                            Padding="15" 
                            Margin="0,10,0,0">
                                <StackPanel>
                                    <TextBlock Text="Medical Notes" 
                                       FontSize="16" 
                                       FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextColor}" 
                                       Margin="0,0,0,10"/>
                                    <TextBlock x:Name="txtDetailsMedicalNotes" 
                                       Text="No medical notes available." 
                                       FontSize="14" 
                                       TextWrapping="Wrap" 
                                       Foreground="{StaticResource TextColor}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Right" 
                        Margin="0,20,0,0">
                        <Button x:Name="btnEditFromDetails" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Background="{StaticResource SecondaryBackColor}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        Click="BtnEditFromDetails_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Pencil" Width="14" Height="14" Foreground="{StaticResource TextColor}"/>
                                <TextBlock Text="Edit" Margin="8,0,0,0" Foreground="{StaticResource TextColor}"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="btnCloseDetails" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Margin="10,0,0,0"
                        Click="BtnCloseDetails_Click">
                            <StackPanel Orientation="Horizontal">
                                <iconPacks:PackIconMaterial Kind="Check" Width="14" Height="14"/>
                                <TextBlock Text="Close" Margin="8,0,0,0"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Confirmation Dialog -->
        <Border x:Name="confirmationOverlay" 
        Grid.RowSpan="2" 
        Background="#80000000" 
        Visibility="Collapsed">
            <Border Background="{StaticResource PrimaryBackColor}" 
            CornerRadius="10" 
            Width="400" 
            VerticalAlignment="Center" 
            HorizontalAlignment="Center"
            Padding="25">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Icon -->
                    <iconPacks:PackIconMaterial Grid.Row="0" 
                                       Kind="AlertCircleOutline" 
                                       Width="50" 
                                       Height="50" 
                                       Foreground="#E74C3C"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,15"/>

                    <!-- Message -->
                    <TextBlock Grid.Row="1" 
                       x:Name="txtConfirmationMessage" 
                       Text="Are you sure you want to delete this patient record? This action cannot be undone." 
                       TextWrapping="Wrap" 
                       TextAlignment="Center"
                       FontSize="16"
                       Foreground="{StaticResource TextColor}"
                       Margin="0,0,0,20"/>

                    <!-- Buttons -->
                    <StackPanel Grid.Row="2" 
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center">
                        <Button x:Name="btnCancelConfirmation" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Background="Transparent"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1"
                        Padding="20,8"
                        Click="BtnCancelConfirmation_Click">
                            <TextBlock Text="Cancel" Foreground="{StaticResource TextColor}"/>
                        </Button>
                        <Button x:Name="btnConfirmAction" 
                        Style="{StaticResource PrimaryButtonStyle}" 
                        Background="#E74C3C"
                        Padding="20,8"
                        Margin="10,0,0,0"
                        Click="BtnConfirmAction_Click">
                            <TextBlock Text="Delete"/>
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        <!-- Toast Notification -->
        <Border x:Name="toastNotification" 
        Grid.Row="1" 
        Background="{StaticResource PrimaryAccentColor}" 
        CornerRadius="8" 
        Padding="15,12" 
        Width="300"
        HorizontalAlignment="Center"
        VerticalAlignment="Top"
        Margin="0,20,0,0"
        Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <iconPacks:PackIconMaterial Grid.Column="0" 
                                   x:Name="toastIcon" 
                                   Kind="CheckCircle" 
                                   Width="20" 
                                   Height="20" 
                                   Foreground="White"
                                   VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                   x:Name="toastMessage" 
                   Text="Operation completed successfully!" 
                   Foreground="White"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>

                <Button Grid.Column="2" 
                x:Name="btnCloseToast" 
                Style="{StaticResource IconButtonStyle}"
                Background="Transparent"
                HorizontalAlignment="Right"
                Click="BtnCloseToast_Click">
                    <iconPacks:PackIconMaterial Kind="Close" Width="14" Height="14" Foreground="White"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Page>