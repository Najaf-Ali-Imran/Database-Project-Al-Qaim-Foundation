<Window x:Class="AIQaimFoundation.SampleCollectionPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AIQaimFoundation"
        mc:Ignorable="d"
        Title="AI Qaim Foundation - Sample Collection" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#444"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,12"/>
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="BorderBrush" Value="#e0e0e0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="5" Opacity="0.2" Direction="270"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="28"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="StatLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#666"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="FormLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#1a73e8"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="#1a73e8"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="White" BorderBrush="#e0e0e0" BorderThickness="0,0,0,1">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="15,0">
                    <Ellipse Width="32" Height="32" Fill="#3b5998" Margin="0,0,10,0"/>
                    <TextBlock Text="AI Qaim Foundation" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Content="Home" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Sample Collection" Style="{StaticResource NavButtonStyle}" Background="#f0f4f9"/>
                    <Button Content="Test Requests" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Reports" Style="{StaticResource NavButtonStyle}"/>
                    <Button Content="Contact Us" Style="{StaticResource NavButtonStyle}"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0">
                    <Button Width="35" Height="35" Margin="0,0,10,0" BorderThickness="0" Background="Transparent">
                        <Button.Content>
                            <Path Data="M12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22M17,10A2,2 0 0,0 15,8A2,2 0 0,0 13,10V10.5L16.5,14V16H7.5V14L11,10.5V10A4.5,4.5 0 0,1 15.5,5.5A4.5,4.5 0 0,1 20,10V10.34L17,13V10Z"
                              Fill="#666" Stretch="Uniform" Width="18" Height="18"/>
                        </Button.Content>
                    </Button>
                    <Border Width="35" Height="35" Background="#4e7bef" CornerRadius="20" Margin="10,0">
                        <TextBlock Text="JD" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar -->
            <Border Background="#f8f9fa" BorderBrush="#e0e0e0" BorderThickness="0,0,1,0" Grid.Column="0">
                <StackPanel Margin="0,20,0,0">
                    <TextBlock Text="OVERVIEW" Margin="15,10,15,15" FontSize="12" FontWeight="SemiBold" Foreground="#777"/>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M3,13H21V11H3M3,6V8H21V6M3,18H21V16H3V18Z" Width="20" Height="20" Fill="#555" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M14,10H2V12H14V10M14,6H2V8H14V6M2,16H10V14H2V16M21.5,11.5L23,13L16,20L11.5,15.5L13,14L16,17L21.5,11.5Z" Width="20" Height="20" Fill="#555" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Reporting" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="ADMIN WORKSPACE" Margin="15,25,15,15" FontSize="12" FontWeight="SemiBold" Foreground="#777"/>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z" Width="20" Height="20" Fill="#555" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Manage Users" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M4,6H20V16H4M20,18A2,2 0 0,0 22,16V6C22,4.89 21.1,4 20,4H4C2.89,4 2,4.89 2,6V16A2,2 0 0,0 4,18H0V20H24V18H20Z" Width="20" Height="20" Fill="#555" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Manage Inventory" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19,3H14.82C14.4,1.84 13.3,1 12,1C10.7,1 9.6,1.84 9.18,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M12,3A1,1 0 0,1 13,4A1,1 0 0,1 12,5A1,1 0 0,1 11,4A1,1 0 0,1 12,3M7,7H17V5H19V19H5V5H7V7M17,11H7V9H17V11M15,15H7V13H15V15Z" Width="20" Height="20" Fill="#555" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Manage Appointments" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12,10A2,2 0 0,1 10,8H4V6H10A2,2 0 0,1 12,4A2,2 0 0,1 14,6H20V8H14A2,2 0 0,1 12,10M12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22M6,13H18A6,6 0 0,1 6,13Z" Width="20" Height="20" Fill="#555" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Manage Patient Records" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}" Background="#e8f0fe" Foreground="#1a73e8">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19,3H14.82C14.4,1.84 13.3,1 12,1C10.7,1 9.6,1.84 9.18,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M12,3A1,1 0 0,1 13,4A1,1 0 0,1 12,5A1,1 0 0,1 11,4A1,1 0 0,1 12,3M5,15H8.11L9.62,12.15L10.38,17.92L14.07,13.21L15.89,15H19V19H5V15Z" Width="20" Height="20" Fill="#1a73e8" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Sample Collection" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M19,3H14.82C14.4,1.84 13.3,1 12,1C10.7,1 9.6,1.84 9.18,3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M12,3A1,1 0 0,1 13,4A1,1 0 0,1 12,5A1,1 0 0,1 11,4A1,1 0 0,1 12,3M7,7H17V5H19V19H5V5H7V7M17,11H7V9H17V11M15,15H7V13H15V15Z" Width="20" Height="20" Fill="#555" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Generate Reports" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <TextBlock Text="QUALITY ASSURANCE" Margin="15,25,15,15" FontSize="12" FontWeight="SemiBold" Foreground="#777"/>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M23,12L20.56,9.22L20.9,5.54L17.29,4.72L15.4,1.54L12,3L8.6,1.54L6.71,4.72L3.1,5.53L3.44,9.21L1,12L3.44,14.78L3.1,18.47L6.71,19.29L8.6,22.47L12,21L15.4,22.46L17.29,19.28L20.9,18.46L20.56,14.78L23,12M10,17L6,13L7.41,11.59L10,14.17L16.59,7.58L18,9L10,17Z" Width="20" Height="20" Fill="#555" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Validation" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M23,10C23,8.89 22.1,8 21,8H14.68L15.64,3.43C15.66,3.33 15.67,3.22 15.67,3.11C15.67,2.7 15.5,2.32 15.23,2.05L14.17,1L7.59,7.58C7.22,7.95 7,8.45 7,9V19A2,2 0 0,0 9,21H18C18.83,21 19.54,20.5 19.84,19.78L22.86,12.73C22.95,12.5 23,12.26 23,12V10M1,21H5V9H1V21Z" Width="20" Height="20" Fill="#555" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Approval" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource SidebarButtonStyle}">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M5,3H19A2,2 0 0,1 21,5V19A2,2 0 0,1 19,21H5A2,2 0 0,1 3,19V5A2,2 0 0,1 5,3M7,5A2,2 0 0,0 5,7A2,2 0 0,0 7,9A2,2 0 0,0 9,7A2,2 0 0,0 7,5M17,15A2,2 0 0,0 15,17A2,2 0 0,0 17,19A2,2 0 0,0 19,17A2,2 0 0,0 17,15M17,5A2,2 0 0,0 15,7A2,2 0 0,0 17,9A2,2 0 0,0 19,7A2,2 0 0,0 17,5M12,10A2,2 0 0,0 10,12A2,2 0 0,0 12,14A2,2 0 0,0 14,12A2,2 0 0,0 12,10M7,15A2,2 0 0,0 5,17A2,2 0 0,0 7,19A2,2 0 0,0 9,17A2,2 0 0,0 7,15Z" Width="20" Height="20" Fill="#555" Stretch="Uniform" Margin="0,0,10,0"/>
                            <TextBlock Text="Results Reporting" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>

            <!-- Main Content Area -->
            <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20">
                    <Grid Margin="0,0,0,20">
                        <TextBlock Text="Sample Collection" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <Button Content="Generate Report" Style="{StaticResource PrimaryButtonStyle}" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Statistics -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Style="{StaticResource CardStyle}" Grid.Column="0">
                            <StackPanel>
                                <TextBlock Text="Samples Logged" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="18" Style="{StaticResource StatNumberStyle}" Foreground="#1976d2"/>
                                <TextBlock Text="since last month" Foreground="#888" FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" Grid.Column="1">
                            <StackPanel>
                                <TextBlock Text="Pending Test Requests" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="47" Style="{StaticResource StatNumberStyle}" Foreground="#ff9800"/>
                                <TextBlock Text="since last month" Foreground="#888" FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" Grid.Column="2">
                            <StackPanel>
                                <TextBlock Text="Overall Samples" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="89" Style="{StaticResource StatNumberStyle}" Foreground="#2e7d32"/>
                                <TextBlock Text="since last month" Foreground="#888" FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" Grid.Column="3">
                            <StackPanel>
                                <TextBlock Text="Overall Tests" Style="{StaticResource StatLabelStyle}"/>
                                <TextBlock Text="124" Style="{StaticResource StatNumberStyle}" Foreground="#6200ea"/>
                                <TextBlock Text="since last month" Foreground="#888" FontSize="12" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Main Form Section -->
                    <Border Style="{StaticResource CardStyle}" Margin="10,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Sample Collection Form" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,20"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!-- Patient Information -->
                                <StackPanel Grid.Column="0" Margin="0,0,15,0">
                                    <TextBlock Text="Patient Information" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>

                                    <TextBlock Text="Full Name" Style="{StaticResource FormLabelStyle}"/>
                                    <TextBox Padding="10,8" BorderBrush="#ddd"/>

                                    <TextBlock Text="Contact Number" Style="{StaticResource FormLabelStyle}"/>
                                    <TextBox Padding="10,8" BorderBrush="#ddd"/>

                                    <TextBlock Text="Email (Optional)" Style="{StaticResource FormLabelStyle}"/>
                                    <TextBox Padding="10,8" BorderBrush="#ddd"/>

                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                            <TextBlock Text="Date of Birth" Style="{StaticResource FormLabelStyle}"/>
                                            <DatePicker Padding="5" BorderBrush="#ddd"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                            <TextBlock Text="Gender" Style="{StaticResource FormLabelStyle}"/>
                                            <ComboBox Padding="10,8" BorderBrush="#ddd">
                                                <ComboBoxItem Content="Male"/>
                                                <ComboBoxItem Content="Female"/>
                                                <ComboBoxItem Content="Other"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>

                                    <TextBlock Text="Address" Style="{StaticResource FormLabelStyle}"/>
                                    <TextBox Padding="10,8" BorderBrush="#ddd" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>
                                </StackPanel>

                                <!-- Sample Details -->
                                <StackPanel Grid.Column="1" Margin="15,0,0,0">
                                    <TextBlock Text="Sample Details" FontWeight="SemiBold" FontSize="16" Margin="0,0,0,15"/>

                                    <TextBlock Text="Type of Sample" Style="{StaticResource FormLabelStyle}"/>
                                    <ComboBox Padding="10,8" BorderBrush="#ddd">
                                        <ComboBoxItem Content="Blood"/>
                                        <ComboBoxItem Content="Urine"/>
                                        <ComboBoxItem Content="Swab"/>
                                        <ComboBoxItem Content="Serum"/>
                                        <ComboBoxItem Content="Plasma"/>
                                        <ComboBoxItem Content="Sputum"/>
                                        <ComboBoxItem Content="Soil"/>
                                        <ComboBoxItem Content="Water"/>
                                    </ComboBox>

                                    <TextBlock Text="Collection Method" Style="{StaticResource FormLabelStyle}"/>
                                    <ComboBox Padding="10,8" BorderBrush="#ddd">
                                        <ComboBoxItem Content="Home Visit"/>
                                        <ComboBoxItem Content="Walk-in Lab"/>
                                        <ComboBoxItem Content="Field Collection"/>
                                        <ComboBoxItem Content="Mobile Collection Unit"/>
                                    </ComboBox>

                                    <TextBlock Text="Collection Date &amp; Time" Style="{StaticResource FormLabelStyle}"/>
                                    <DatePicker Padding="5" BorderBrush="#ddd"/>

                                    <TextBlock Text="Assigned Lab Technician" Style="{StaticResource FormLabelStyle}"/>
                                    <ComboBox Padding="10,8" BorderBrush="#ddd">
                                        <ComboBoxItem Content="Dr. Ahmed Khan"/>
                                        <ComboBoxItem Content="Dr. Sarah Malik"/>
                                        <ComboBoxItem Content="Dr. Muhammad Ali"/>
                                        <ComboBoxItem Content="Dr. Fatima Zahra"/>
                                    </ComboBox>

                                    <TextBlock Text="Available Tests" Style="{StaticResource FormLabelStyle}"/>
                                    <Border BorderBrush="#ddd" BorderThickness="1" Padding="10" MaxHeight="120" Margin="0,5,0,0">
                                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                                            <StackPanel>
                                                <CheckBox Content="CBC (Complete Blood Count)" Margin="0,2"/>
                                                <CheckBox Content="Lipid Profile" Margin="0,2"/>
                                                <CheckBox Content="Liver Function Test" Margin="0,2"/>
                                                <CheckBox Content="Kidney Function Test" Margin="0,2"/>
                                                <CheckBox Content="Heavy Metal Analysis" Margin="0,2"/>
                                                <CheckBox Content="Microbiological Analysis" Margin="0,2"/>
                                                <CheckBox Content="TB Culture" Margin="0,2"/>
                                                <CheckBox Content="Thyroid Function Test" Margin="0,2"/>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </Border>

                                    <TextBlock Text="Priority Level" Style="{StaticResource FormLabelStyle}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <RadioButton Content="Normal" Margin="0,0,20,0"/>
                                        <RadioButton Content="Urgent"/>
                                    </StackPanel>

                                    <TextBlock Text="Special Instructions" Style="{StaticResource FormLabelStyle}"/>
                                    <TextBox Padding="10,8" BorderBrush="#ddd" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

                                    <Button Content="Submit &amp; Generate Receipt" Style="{StaticResource PrimaryButtonStyle}" Margin="0,20,0,0" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Border>

                    <!-- Recent Sample Collections -->
                    <Border Style="{StaticResource CardStyle}" Margin="10,0,10,20">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <TextBlock Text="Recent Sample Collections" FontSize="18" FontWeight="SemiBold"/>
                                <ComboBox Width="150" HorizontalAlignment="Right" Padding="10,5">
                                    <ComboBoxItem Content="All Samples" IsSelected="True"/>
                                    <ComboBoxItem Content="Pending"/>
                                    <ComboBoxItem Content="In Progress"/>
                                    <ComboBoxItem Content="Completed"/>
                                </ComboBox>
                            </Grid>

                            <Grid Grid.Row="1" Margin="0,15,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBox Padding="10,8" BorderBrush="#ddd" Grid.Column="0" Margin="0,0,10,0">
                                    <TextBox.Resources>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="CornerRadius" Value="4"/>
                                        </Style>
                                    </TextBox.Resources>
                                </TextBox>

                                <Button Content="Search" Grid.Column="1" Style="{StaticResource PrimaryButtonStyle}"/>
                            </Grid>

                            <DataGrid Grid.Row="2" AutoGenerateColumns="False" HeadersVisibility="Column"
                                      GridLinesVisibility="Horizontal" BorderThickness="0" RowHeight="40"
                                      Background="Transparent" RowBackground="White" AlternatingRowBackground="#f8f9fa"
                                      CanUserAddRows="False" CanUserDeleteRows="False" IsReadOnly="True">
                                <DataGrid.Resources>
                                    <Style TargetType="{x:Type DataGridColumnHeader}">
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="Padding" Value="10,10"/>
                                        <Setter Property="FontWeight" Value="SemiBold"/>
                                    </Style>
                                </DataGrid.Resources>

                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
                                    <DataGridTextColumn Header="Patient Name" Binding="{Binding PatientName}" Width="180"/>
                                    <DataGridTextColumn Header="Sample Type" Binding="{Binding SampleType}" Width="120"/>
                                    <DataGridTextColumn Header="Collection Date" Binding="{Binding CollectionDate}" Width="120"/>
                                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Completed">
                                                        <Setter Property="Foreground" Value="#2e7d32"/>
                                                        <Setter Property="Background" Value="#e8f5e9"/>
                                                        <Setter Property="Padding" Value="8,3"/>
                                                        <Setter Property="TextAlignment" Value="Center"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="In Progress">
                                                        <Setter Property="Foreground" Value="#0277bd"/>
                                                        <Setter Property="Background" Value="#e1f5fe"/>
                                                        <Setter Property="Padding" Value="8,3"/>
                                                        <Setter Property="TextAlignment" Value="Center"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Pending">
                                                        <Setter Property="Foreground" Value="#ed6c02"/>
                                                        <Setter Property="Background" Value="#fff3e0"/>
                                                        <Setter Property="Padding" Value="8,3"/>
                                                        <Setter Property="TextAlignment" Value="Center"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Rejected">
                                                        <Setter Property="Foreground" Value="#c62828"/>
                                                        <Setter Property="Background" Value="#ffebee"/>
                                                        <Setter Property="Padding" Value="8,3"/>
                                                        <Setter Property="TextAlignment" Value="Center"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTemplateColumn Header="Actions" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
