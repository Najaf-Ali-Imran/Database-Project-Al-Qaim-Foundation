        <Style x:Key="SideMenuButton" TargetType="Button">
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="16,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <Grid>
                                <Border x:Name="indicator" Width="4" Height="24" HorizontalAlignment="Left" CornerRadius="2" Background="Transparent" Margin="0,0,0,0"/>
                                <ContentPresenter VerticalAlignment="Center" Margin="20,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SidebarHoverColor}"/>
                                <Setter Property="Foreground" Value="{StaticResource PrimaryAccentColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource SidebarActiveColor}"/>
                                <Setter TargetName="indicator" Property="Background" Value="{StaticResource PrimaryAccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SideMenuButtonActive" TargetType="Button" BasedOn="{StaticResource SideMenuButton}">
            <Setter Property="Background" Value="{StaticResource SidebarActiveColor}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryAccentColor}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <Grid>
                                <Border x:Name="indicator" Width="4" Height="24" HorizontalAlignment="Left" CornerRadius="2" Background="{StaticResource PrimaryAccentColor}" Margin="0,0,0,0"/>
                                <ContentPresenter VerticalAlignment="Center" Margin="20,0"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{StaticResource SidebarHoverColor}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource SidebarActiveColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TopMenuButton" TargetType="Button">
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Margin" Value="6,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="40,0,10,0"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#F7F9FC"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10">
                            <Grid>
                                <ContentControl ContentTemplate="{StaticResource SearchIcon}" 
                                Foreground="{StaticResource TextSecondaryColor}" 
                                Width="16" Height="16"
                                HorizontalAlignment="Left" 
                                Margin="14,0,0,0"/>
                                <ScrollViewer x:Name="PART_ContentHost" 
                          Margin="{TemplateBinding Padding}"
                          VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="TitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="SubtitleText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>

        <Style x:Key="CategoryLabel" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
            <Setter Property="Margin" Value="20,20,20,8"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <Style x:Key="ModernScrollBarThumb" TargetType="Thumb">
            <Setter Property="Height" Value="330"/>
            <Setter Property="Width" Value="13"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Thumb">
                        <Border x:Name="thumbBorder"
                    Background="{StaticResource PrimaryAccentColor}"
                    BorderBrush="LightGray" 
                    BorderThickness="1"
                    CornerRadius="6"/>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="thumbBorder" Property="Background" Value="#FF4A90E2"/>
                            </Trigger>
                            <Trigger Property="IsDragging" Value="True">
                                <Setter TargetName="thumbBorder" Property="Background" Value="#FF357ABD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="{TemplateBinding Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.DecreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineUpCommand"
                            Style="{x:Null}" 
                            IsTabStop="False"
                            Opacity="0"
                            Height="0"/>
                                </Track.DecreaseRepeatButton>
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ModernScrollBarThumb}"/>
                                </Track.Thumb>
                                <Track.IncreaseRepeatButton>
                                    <RepeatButton Command="ScrollBar.LineDownCommand"
                            Style="{x:Null}" 
                            IsTabStop="False"
                            Opacity="0"
                            Height="0"/>
                                </Track.IncreaseRepeatButton>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border Background="{StaticResource PrimaryBackColor}" CornerRadius="12" BorderThickness="1" BorderBrush="{StaticResource BorderColor}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="64"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Navigation Bar -->
            <Border Grid.Row="0" Background="{StaticResource PrimaryBackColor}" CornerRadius="12,12,0,0" 
                    BorderThickness="0,0,0,1" BorderBrush="{StaticResource BorderColor}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="280"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Logo and Name -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0">
                        <Border Width="36" Height="36" CornerRadius="18">
                            <Image Source="/logo.png" Stretch="UniformToFill"/>
                        </Border>
                        <TextBlock Text="Al-Qaim Foundation" FontWeight="Bold" FontSize="16" 
               Foreground="{StaticResource TextPrimaryColor}" VerticalAlignment="Center" Margin="12,0,0,0"/>
                    </StackPanel>

                    <!-- Search Box -->
                    <Border Grid.Column="1" Width="360" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20,0">
                        <TextBox x:Name="searchTextBox"
                         Style="{StaticResource SearchBox}"
                         Text="Search..."
                         GotFocus="TextBox_GotFocus"
                         LostFocus="TextBox_LostFocus"
                         TextChanged="TextBox_TextChanged"
                         Margin="72,0,-72,0" />
                    </Border>

                    <!-- Top Nav Buttons -->
                    <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                        <!-- Settings and Notification Icons with proper spacing -->
                        <Button Style="{StaticResource TopMenuButton}" Margin="0,0,8,0">
                            <ContentControl ContentTemplate="{StaticResource SettingsIcon}" Foreground="{StaticResource TextSecondaryColor}"/>
                        </Button>

                        <Grid Margin="0,0,8,0">
                            <Button Style="{StaticResource TopMenuButton}">
                                <ContentControl ContentTemplate="{StaticResource NotificationIcon}" Foreground="{StaticResource TextSecondaryColor}"/>
                            </Button>
                            <!-- Notification Badge -->
                            <Ellipse Width="8" Height="8" Fill="{StaticResource WarningColor}" 
                 HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,17,0"/>
                        </Grid>

                        <!-- Separator -->
                        <Border Width="1" Height="24" Margin="4,0" Background="{StaticResource BorderColor}" Opacity="0.6"/>

                        <!-- User Avatar -->
                        <Border Width="42" Height="42" CornerRadius="10" Background="#EEF2FF" VerticalAlignment="Center" Margin="8,0">
                            <TextBlock Text="A" HorizontalAlignment="Center" VerticalAlignment="Center" 
                   FontWeight="Bold" Foreground="{StaticResource PrimaryAccentColor}"/>
                        </Border>

                        <!-- User Info -->
                        <StackPanel VerticalAlignment="Center" Margin="4,0,0,0">
                            <TextBlock Text="Admin" FontWeight="SemiBold" FontSize="13" Foreground="{StaticResource TextPrimaryColor}"/>
                            <TextBlock Text="Admin@AlQaim.org" FontSize="11" Foreground="{StaticResource TextSecondaryColor}"/>
                        </StackPanel>

                        <!-- Separator -->
                        <Border Width="1" Height="24" Margin="12,0" Background="{StaticResource BorderColor}" Opacity="0.6"/>

                        <!-- Window Control Buttons -->
                        <Button x:Name="btnMinimize" Style="{StaticResource TopMenuButton}" Click="BtnMinimize_Click">
                            <ContentControl ContentTemplate="{StaticResource MinimizeIcon}" Foreground="{StaticResource TextSecondaryColor}"/>
                        </Button>
                        <Button x:Name="btnMaximize" Style="{StaticResource TopMenuButton}" Click="BtnMaximize_Click">
                            <ContentControl ContentTemplate="{StaticResource MaximizeIcon}" Foreground="{StaticResource TextSecondaryColor}"/>
                        </Button>
                        <Button x:Name="btnClose" Style="{StaticResource TopMenuButton}" Click="BtnClose_Click">
                            <ContentControl ContentTemplate="{StaticResource CloseIcon}" Foreground="{StaticResource DangerColor}"/>
                        </Button>
                    </StackPanel>

                </Grid>
            </Border>

            <!-- Main Content Area -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="280"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Sidebar -->
                <Border Grid.Column="0" Background="{StaticResource SecondaryBackColor}" 
                        BorderThickness="0,0,1,0" BorderBrush="{StaticResource BorderColor}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- side nav Items -->
                        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto">
                            <ScrollViewer.Resources>
                                <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ModernScrollBarStyle}"/>
                            </ScrollViewer.Resources>
                            <StackPanel>
                                <TextBlock Text="MAIN MENU" Style="{StaticResource CategoryLabel}"/>
                                <Button Style="{StaticResource SideMenuButtonActive}">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl ContentTemplate="{StaticResource DashboardIcon}" Margin="0,0,12,0"/>
                                        <TextBlock Text="Dashboard" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource SideMenuButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl ContentTemplate="{StaticResource UsersIcon}" Margin="0,0,12,0"/>
                                        <TextBlock Text="Manage Users" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource SideMenuButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl ContentTemplate="{StaticResource InventoryIcon}" Margin="0,0,12,0"/>
                                        <TextBlock Text="Inventory Management" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource SideMenuButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl ContentTemplate="{StaticResource AppointmentsIcon}" Margin="0,0,12,0"/>
                                        <TextBlock Text="Manage Appointments" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <Button Style="{StaticResource SideMenuButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl ContentTemplate="{StaticResource PatientRecordsIcon}" Margin="0,0,12,0"/>
                                        <TextBlock Text="Patient Records" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <TextBlock Text="REPORTS" Style="{StaticResource CategoryLabel}"/>
                                <Button Style="{StaticResource SideMenuButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl ContentTemplate="{StaticResource ReportsIcon}" Margin="0,0,12,0"/>
                                        <TextBlock Text="Generate Reports" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <TextBlock Text="SUPPLY CHAIN" Style="{StaticResource CategoryLabel}"/>
                                <Button Style="{StaticResource SideMenuButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl ContentTemplate="{StaticResource SupplyRequestsIcon}" Margin="0,0,12,0"/>
                                        <TextBlock Text="Supply Requests" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>

                                <TextBlock Text="SYSTEM" Style="{StaticResource CategoryLabel}"/>
                                <Button Style="{StaticResource SideMenuButton}">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl ContentTemplate="{StaticResource AuthenticationIcon}" Margin="0,0,12,0"/>
                                        <TextBlock Text="Authentication" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </ScrollViewer>

                        <!-- Bottom Help and Logout Section -->
                        <Border Grid.Row="1" Background="{StaticResource SecondaryBackColor}" 
                            BorderThickness="0,1,0,0" BorderBrush="{StaticResource BorderColor}" Padding="16">
                            <StackPanel>
                                <Button Style="{StaticResource SideMenuButton}" Margin="0,4">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl ContentTemplate="{StaticResource HelpIcon}" Margin="0,0,12,0"/>
                                        <TextBlock Text="Help &amp; Support" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                                <Button Style="{StaticResource SideMenuButton}" Margin="0,4">
                                    <StackPanel Orientation="Horizontal">
                                        <ContentControl ContentTemplate="{StaticResource LogoutIcon}" Margin="0,0,12,0"/>
                                        <TextBlock Text="Logout" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>
                    </Grid>
                </Border>


                <!-- Frame Control Area -->
                <Frame Grid.Column="1" x:Name="MainFrame" NavigationUIVisibility="Hidden" 
                       Background="{StaticResource PrimaryBackColor}">
                    <!-- new pages will be loaded here  -->
                    <Frame.Content>
                        <Border Padding="30" Background="{StaticResource PrimaryBackColor}">
                            <TextBlock Text="Select an option from the sidebar to load content" 
                                      HorizontalAlignment="Center" 
                                      VerticalAlignment="Center"
                                      FontSize="16"
                                      Foreground="{StaticResource TextSecondaryColor}"/>
                        </Border>
                    </Frame.Content>
                </Frame>
            </Grid>
        </Grid>
    </Border>
</Window>